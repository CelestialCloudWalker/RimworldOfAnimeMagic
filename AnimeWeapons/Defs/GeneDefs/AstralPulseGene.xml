<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <GeneCategoryDef>
  <defName>AstralPulse</defName>
      <label>Astral Pulse</label>
      <description>A reserve of cosmic energy that powers abilities.</description>
      <geneClass>CelestialCloudWalkerWeapons.Gene_AstralPulse</geneClass>
      <resourceGizmoType>CelestialCloudWalkerWeapons.GeneGizmo_ResourceAstralPulse</resourceGizmoType>
    <displayPriorityInXenotype>820</displayPriorityInXenotype>
    <displayPriorityInGenepack>-45</displayPriorityInGenepack>
  </GeneCategoryDef>

  <GeneDef>
    <defName>AstralPulseGene</defName>
    <label>astral pulse</label>
    <description>Carriers of this gene have a reserve of cosmic energy known as astral pulse.</description>
    <geneClass>Gene_AstralPulse</geneClass>
    <resourceGizmoType>CelestialCloudWalkerWeapons.GeneGizmo_ResourceAstralPulse</resourceGizmoType>
    <geneClass>CelestialCloudWalkerWeapons.Gene_AstralPulse</geneClass>
    <resourceLabel>astral pulse</resourceLabel>
    <resourceGizmoThresholds>
      <li>0.25</li>
      <li>0.5</li>
      <li>0.75</li>
    </resourceGizmoThresholds>
    <showGizmoOnWorldView>true</showGizmoOnWorldView>
    <showGizmoWhenDrafted>true</showGizmoWhenDrafted>
    <resourceDescription>A reserve of cosmic energy that powers abilities.</resourceDescription>
    <iconPath>UI/Icons/Genes/Gene_AstralPulse</iconPath>
    <selectionWeight>0</selectionWeight>
    <displayCategory>AstralPulse</displayCategory>
    <displayOrderInCategory>-2</displayOrderInCategory>
    <customEffectDescriptions>
      <li>Provides astral pulse reserve.</li>
    </customEffectDescriptions>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>astro</symbol></li>
      </prefixSymbols>
    </symbolPack>
    <minAgeActive>3</minAgeActive>
    <resourceLossPerDay>0.02</resourceLossPerDay>
    <biostatCpx>1</biostatCpx>
    <biostatMet>1</biostatMet>
  </GeneDef>

  <StatDef>
  <defName>AstralPulse</defName>
  <label>Astral Pulse</label>
  <category>PawnMisc</category>
  <description>Astral Pulse a pawn can store.</description>
  <defaultBaseValue>100</defaultBaseValue>
  <minValue>0</minValue>
  <toStringStyle>PercentOne</toStringStyle>
  <shownOnPawns>true</shownOnPawns>
  </StatDef>

  <StatDef>
  <defName>AstralPulse_Max</defName>
  <label>Maximum Astral Pulse</label>
  <category>PawnMisc</category>
  <description>The maximum amount of Astral Pulse a pawn can store.</description>
  <defaultBaseValue>100</defaultBaseValue>
  <minValue>0</minValue>
  <toStringStyle>PercentOne</toStringStyle>
  <shownOnPawns>true</shownOnPawns>
</StatDef>

<StatDef>
  <defName>AstralPulse_RegenRate</defName>
  <label>Astral Pulse Regen Rate</label>
  <category>PawnMisc</category>
  <description>Rate of Astral Pulse regeneration per tick.</description>
  <defaultBaseValue>1</defaultBaseValue>
  <minValue>0</minValue>
  <toStringStyle>PercentOne</toStringStyle>
  <shownOnPawns>true</shownOnPawns>
</StatDef>

<StatDef>
  <defName>AstralPulse_RegenTicks</defName>
  <label>Astral Pulse Regen Ticks</label>
  <category>PawnMisc</category>
  <description>Number of ticks between Astral Pulse regeneration cycles.</description>
  <defaultBaseValue>100</defaultBaseValue>
   <minValue>0</minValue>
   <maxValue>1000</maxValue>
   <toStringStyle>Integer</toStringStyle>
</StatDef>

<StatDef>
  <defName>AstralPulse_Cost</defName>
  <label>Astral Pulse Cost Multiplier</label>
  <category>PawnMisc</category>
  <description>Astral Pulse Cost Multiplier.</description>
  <defaultBaseValue>1</defaultBaseValue>
  <minValue>0</minValue>
  <maxValue>1</maxValue>
  <toStringStyle>PercentOne</toStringStyle>
  <shownOnPawns>true</shownOnPawns>
</StatDef>

</Defs>
