<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <AnimeArsenal.BreathingTechniqueGeneDef ParentName="AA_BaseBreathingGene">
    <defName>SunBreath</defName>
    <label>Sun Breath</label>
    <resourceName>Sun Breath</resourceName>
    <description>The legendary Breathing Style, Sun Breathing, is the first ever created. It channels the raw, primal energy of the sun to unleash devastating and precise techniques. All other Breathing Styles are derived from it.</description>
    <iconPath>UI/Icons/Genes/e</iconPath>
    <resourceLabel>Sun Breath</resourceLabel>
    <resourceDescription>Current stored Breath, charged with the essence of the sun. This radiant energy powers devastating solar-based abilities, unleashing searing strikes that overwhelm and scorch enemies with the power of the sun.</resourceDescription>
    <abilities>
      <li>TotalConcentrationBreathing</li>
      <li>SunBreathRadiantSunstrike</li>
    </abilities>
    <!-- Tree Configuration -->

    <!-- Experience System -->
    <experienceFormula>Basic_LinearXP</experienceFormula>
    <experienceGainSettings>
        <experienceTypes>
            <!-- Combat XP -->
            <li Class="Talented.DamageTakenExperienceTypeDef">
                <baseXP>10</baseXP>
                <damageFactor>0.1</damageFactor>
            </li>

            <li Class="Talented.DamageDealtExperienceTypeDef">
                <baseXP>10</baseXP>
                <damageFactor>0.1</damageFactor>
            </li>
            <!-- Skill XP -->
            <li Class="Talented.SkillExperienceTypeDef">
                <SkillDef>Shooting</SkillDef>
                <baseXP>2</baseXP>
            </li>

            <!-- Job XP -->
            <li Class="Talented.JobExperienceTypeDef">
                <SkillDef>HaulToCell</SkillDef>
                <baseXP>1</baseXP>
            </li>

            <!-- Verb XP -->
            <li Class="Talented.VerbExperienceTypeDef">
                <VerbClassName>Verb_BeatFire</VerbClassName>
                <baseXP>1</baseXP>
            </li>
        </experienceTypes>
    </experienceGainSettings>
    <maxStat>AstralPulse</maxStat>
    <biostatCpx>2</biostatCpx>
    <biostatMet>1</biostatMet>
    <resourceGizmoThresholds>
      <li>0.25</li>
      <li>0.5</li>
      <li>0.75</li>
    </resourceGizmoThresholds>
    <displayCategory>BreathingTechnique</displayCategory>
    <resourceLossPerDay>0</resourceLossPerDay>
    <barColor>(255, 120, 0)</barColor>
    <showGizmoWhenDrafted>true</showGizmoWhenDrafted>
    <!-- Exhaustion Settings -->
    <exhaustionPerTick>0.0004</exhaustionPerTick>
    <!-- Default to fire exhaustion -->
    <exhaustionHediff>FlowerEnchantmentExhaustion</exhaustionHediff>
    <ticksBeforeExhaustionStart>2500</ticksBeforeExhaustionStart>
    <ticksPerExhaustionIncrease>1750</ticksPerExhaustionIncrease>
    <exhausationCooldownTicks>3000</exhausationCooldownTicks>
    <!-- UI Configuration -->
    <TabLabel>Talents</TabLabel>
