<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>WindEdge</defName>
    <label>Wind Edge</label>
    <description>The weapon hums with sharp gusts of wind, its strikes slicing through enemies with razor-like precision.</description>
    <displayWound>false</displayWound>
    <hediffClass>HediffWithComps</hediffClass>
    <injuryProps>
      <painPerSeverity>0.05</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00025</averagePainPerSeverityPermanent>
      <bleedRate>0.000</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>destroyed</destroyedLabel>
      <destroyedOutLabel>destroyed</destroyedOutLabel>
    </injuryProps>
    <comps>
        <li Class="AnimeArsenal.HediffCompProperties_Enchant">
            <damageType>WindSlice</damageType>
            <damageValue>10</damageValue>
        </li>
    </comps>
  </HediffDef>

  <DamageDef>
    <defName>WindSlice</defName>
    <label>Wind Slice</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been killed by a tornado.</deathMessage>
    <hediff>Scratch</hediff>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Tornado</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
  </DamageDef>



</Defs>
