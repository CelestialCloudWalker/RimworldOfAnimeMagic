<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<AbilityDef>
      <defName>Fourteenth_Form_Howling_Blade_Infusion</defName>
      <label>Fourteenth Form: Howling Blade Infusion</label>
      <description>The user channels wind energy into their blade, causing it to emit a howling sound and granting it extended reach and cutting power as it slices through the air with enhanced speed.</description>
      <targetRequired>false</targetRequired>
      <verbProperties>
          <verbClass>Verb_CastAbility</verbClass>
          <range>-1</range>
      </verbProperties>
      <comps>
          <li Class="AnimeArsenal.CompProperties_ToggleHediff">
              <hediffDef>WindEdge</hediffDef>
          </li>
          <li Class="AnimeArsenal.CompProperties_ResourceCost">
            <resourceGeneDef>WindBreath</resourceGeneDef>
            <resourceCost>20</resourceCost>
          </li>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>5</Radius>
            <MaxShotsToReflect>20</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_WindDeflect</effecterDef>
           </li>
      </comps>
  </AbilityDef>
</Defs>
