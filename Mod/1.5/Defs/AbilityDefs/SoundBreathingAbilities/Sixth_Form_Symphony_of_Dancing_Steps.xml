<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AbilityDef>
    <defName>Sixth_Form_Symphony_of_Dancing_Steps</defName>
    <label>Sixth Form: Symphony of Dancing Steps</label>
    <description>The user vanishes in a blitz of dashes.</description>
    <iconPath>UI/Icons/ComingSoon</iconPath>
    <cooldownTicksRange>600~600</cooldownTicksRange>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <drawAimPie>True</drawAimPie>
      <warmupTime>0.5</warmupTime>
      <range>15</range>
      <requireLineOfSight>True</requireLineOfSight>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetPawns>true</canTargetPawns>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="AnimeArsenal.CompProperties_BaseStance">
        <maxJumps>5</maxJumps>
        <ticksBetweenJumps>1</ticksBetweenJumps>
        <jumpDistance>6</jumpDistance>
        <duration>11</duration>
        <jumpDamageDef>Blunt</jumpDamageDef>
        <jumpDamage>3~5</jumpDamage>
        <jumpOffsets>
          <li>(3, 0, 5)</li>
          <li>(-3, 0, -5)</li>
          <li>(6, 0, 0)</li>
          <li>(-6, 0, 0)</li>
          <li>(3, 0, -5)</li>
          <li>(-3, 0, 5)</li>
          <li>(-4, 0, -2)</li>
          <li>(4, 0, 2)</li>
          <li>(0, 0, 6)</li>
          <li>(0, 0, -6)</li>
        </jumpOffsets>
      </li>
      <li Class="AnimeArsenal.CompProperties_ResourceCost">
        <resourceGeneDef>SoundBreath</resourceGeneDef>
        <resourceCost>20</resourceCost>
      </li>
    </comps>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
  </AbilityDef>
</Defs>
