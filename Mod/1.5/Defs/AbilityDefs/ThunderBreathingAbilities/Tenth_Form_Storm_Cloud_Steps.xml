<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AbilityDef>
    <defName>Tenth_Form_Storm_Cloud_Steps</defName>
    <label>Tenth Form: Storm Cloud Steps</label>
    <description>The user vanishes in a blitz of dashes.</description>
    <iconPath>UI/Icons/ComingSoon</iconPath>
    <cooldownTicksRange>600~600</cooldownTicksRange>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <drawAimPie>True</drawAimPie>
      <warmupTime>0.5</warmupTime>
      <range>15</range>
      <requireLineOfSight>True</requireLineOfSight>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetPawns>true</canTargetPawns>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="AnimeArsenal.CompProperties_BaseStance">
        <maxJumps>5</maxJumps>
        <ticksBetweenJumps>0</ticksBetweenJumps>
        <jumpDistance>7</jumpDistance>
        <duration>8</duration>
        <jumpDamageDef>Stab</jumpDamageDef>
        <jumpDamage>5~7</jumpDamage>
        <jumpOffsets>
          <li>(7, 0, 0)</li>
          <li>(-7, 0, 0)</li>
          <li>(0, 0, 7)</li>
          <li>(0, 0, -7)</li>
          <li>(5, 0, 5)</li>
          <li>(-5, 0, -5)</li>
          <li>(6, 0, -2)</li>
          <li>(-6, 0, 2)</li>
          <li>(-5, 0, 5)</li>
          <li>(5, 0, -5)</li>
        </jumpOffsets>
      </li>
      <li Class="AnimeArsenal.CompProperties_ResourceCost">
        <resourceGeneDef>ThunderBreath</resourceGeneDef>
        <resourceCost>20</resourceCost>
      </li>
    </comps>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
  </AbilityDef>
</Defs>
