<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AbilityDef>
    <defName>Twelfth_Fang_Boar_Rush</defName>
    <label>Twelfth Fang: Boar Rush</label>
    <description>The user vanishes in a blitz of dashes.</description>
    <iconPath>UI/Abilities/LightningLeap</iconPath>
    <cooldownTicksRange>600~600</cooldownTicksRange>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <drawAimPie>True</drawAimPie>
      <warmupTime>0.5</warmupTime>
      <range>15</range>
      <requireLineOfSight>True</requireLineOfSight>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetPawns>true</canTargetPawns>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="AnimeArsenal.CompProperties_ResourceCost">
        <resourceGeneDef>BeastBreath</resourceGeneDef>
        <resourceCost>20</resourceCost>
      </li>
      <li Class="AnimeArsenal.CompProperties_BaseStance">
        <maxJumps>10</maxJumps>
        <ticksBetweenJumps>1</ticksBetweenJumps>
        <jumpDistance>5</jumpDistance>
        <duration>15</duration>
        <jumpDamageDef>Burn</jumpDamageDef>
        <jumpDamage>3~4</jumpDamage>
        <jumpOffsets>
          <!-- Wild boar attack pattern - unpredictable, aggressive charges with quick direction changes -->
          <li>(6, 0, 8)</li>     <!-- Initial aggressive charge forward -->
          <li>(-2, 0, -3)</li>   <!-- Quick partial retreat/reposition -->
          <li>(5, 0, -2)</li>    <!-- Side lunge right -->
          <li>(-4, 0, 4)</li>    <!-- Diagonal retreat left -->
          <li>(7, 0, 0)</li>     <!-- Fast sideways charge right -->
          <li>(-3, 0, 6)</li>    <!-- Diagonal forward lunge left -->
          <li>(0, 0, -5)</li>    <!-- Quick backward movement -->
          <li>(4, 0, 7)</li>     <!-- Forward right charge -->
          <li>(-5, 0, -1)</li>   <!-- Sidestep left with slight retreat -->
          <li>(3, 0, -6)</li>    <!-- Backward diagonal movement right -->
          <li>(-6, 0, 2)</li>    <!-- Left charge with slight forward -->
          <li>(2, 0, 5)</li>     <!-- Forward right short charge -->
          <li>(-7, 0, -4)</li>   <!-- Sharp retreat to left -->
          <li>(8, 0, 3)</li>     <!-- Powerful final charge -->
        </jumpOffsets>
      </li>
    </comps>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
  </AbilityDef>
</Defs>
