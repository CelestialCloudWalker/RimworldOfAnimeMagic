<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AbilityDef>
    <defName>Eighth_Form_Stalactite_Rain</defName>
    <label>Eighth Form: Stalactite Rain</label>
    <description>The user vanishes in a blitz of dashes.</description>
    <iconPath>UI/Icons/ComingSoon</iconPath>
    <cooldownTicksRange>600~600</cooldownTicksRange>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <drawAimPie>True</drawAimPie>
      <warmupTime>0.5</warmupTime>
      <range>15</range>
      <requireLineOfSight>True</requireLineOfSight>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetPawns>true</canTargetPawns>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="AnimeArsenal.CompProperties_BaseStance">
        <maxJumps>5</maxJumps>
        <ticksBetweenJumps>3</ticksBetweenJumps>
        <jumpDistance>3</jumpDistance>
        <duration>15</duration>
        <jumpDamageDef>Blunt</jumpDamageDef>
        <jumpDamage>6~8</jumpDamage>
        <jumpOffsets>
          <li>(3, 0, 0)</li>
          <li>(-3, 0, 0)</li>
          <li>(0, 0, 3)</li>
          <li>(0, 0, -3)</li>
          <li>(2, 0, 2)</li>
          <li>(-2, 0, -2)</li>
          <li>(3, 0, -1)</li>
          <li>(-3, 0, 1)</li>
          <li>(-2, 0, 2)</li>
          <li>(2, 0, -2)</li>
        </jumpOffsets>
      </li>
      <li Class="AnimeArsenal.CompProperties_ResourceCost">
        <resourceGeneDef>StoneBreath</resourceGeneDef>
        <resourceCost>20</resourceCost>
      </li>
    </comps>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
  </AbilityDef>
</Defs>
