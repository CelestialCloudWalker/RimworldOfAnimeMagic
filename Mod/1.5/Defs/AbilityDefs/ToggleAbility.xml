<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<AbilityDef>
      <defName>ToggleHediff</defName>
      <label>toggle hediff</label>
      <description>Toggles a hediff on or off.</description>
      <targetRequired>false</targetRequired>
      <verbProperties>
          <verbClass>Verb_CastAbility</verbClass>
          <range>-1</range>
      </verbProperties>
      <comps>
          <li Class="AnimeArsenal.CompProperties_ToggleHediff">
              <hediffDef>FireEnchantment</hediffDef>
          </li>
      </comps>
  </AbilityDef>

  <HediffDef>
        <defName>FireEnchantment</defName>
        <label>fire enchantment</label>
        <comps>
            <li Class="AnimeArsenal.HediffCompProperties_Enchant">
                <damageType>Burn</damageType>
                <damageValue>10</damageValue>
            </li>
        </comps>
    </HediffDef>

</Defs>
