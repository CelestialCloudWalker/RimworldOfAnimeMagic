<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <PawnKindDef ParentName="BasePlayerPawnKind">
    <defName>AA_DemonColonist</defName>
    <label>Demon</label>
    <race>AA_DemonRace</race>
    <defaultFactionType>PlayerColony</defaultFactionType>
    <xenotypeSet>
      <xenotypeChances>
        <AA_DemonBloodArts_User>999</AA_DemonBloodArts_User>
      </xenotypeChances>
    </xenotypeSet>

    <!-- This is a required field. 13~21 is the default value for Crashlanded player colonists. -->
    <initialResistanceRange>13~21</initialResistanceRange>
  </PawnKindDef>

  <PawnKindDef Name="DemonBase" Abstract="True">
    <race>AA_DemonRace</race>
    <defaultFactionType>Pirate</defaultFactionType>
    <xenotypeSet>
      <xenotypeChances>
        <AA_DemonBloodArts_User>999</AA_DemonBloodArts_User>
      </xenotypeChances>
    </xenotypeSet>
    <chemicalAddictionChance>0.1</chemicalAddictionChance>
    <invNutrition>2.55</invNutrition>
    <itemQuality>Normal</itemQuality>
    <backstoryCryptosleepCommonality>0.08</backstoryCryptosleepCommonality>
    <maxGenerationAge>65</maxGenerationAge>
    <combatEnhancingDrugsChance>0.15</combatEnhancingDrugsChance>
    <combatEnhancingDrugsCount>0~2</combatEnhancingDrugsCount>
    <biocodeWeaponChance>0.1</biocodeWeaponChance>
  </PawnKindDef>

  <!-- Low merc tier - grenadiers -->

  <PawnKindDef Abstract="True" Name="LowDemonBase" ParentName="DemonBase">
    <race>AA_DemonRace</race>
    <gearHealthRange>0.7~2.3</gearHealthRange>
    <initialWillRange>1~3</initialWillRange>
    <apparelTags>
      <li>IndustrialBasic</li>
      <li>IndustrialAdvanced</li>
      <li>IndustrialMilitaryBasic</li>
      <li>BeltDefensePop</li>
    </apparelTags>
    <apparelMoney>400~700</apparelMoney>
    <apparelAllowHeadgearChance>0.5</apparelAllowHeadgearChance>
    <weaponMoney>500~500</weaponMoney>
    <techHediffsChance>0.05</techHediffsChance>
    <techHediffsMoney>500~500</techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
      <li>Simple</li>
      <li>ImplantEmpireCommon</li>
    </techHediffsTags>
    <inventoryOptions>
      <skipChance>0.95</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>MedicineIndustrial</thingDef>
          <countRange>1</countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>

  <PawnKindDef ParentName="LowDemonBase">
    <defName>Low_Demon</defName>
    <label>Demon</label>
    <combatPower>70</combatPower>
    <abilities>
      <li>BloodDemonArt_LightingStrike</li>
      <li>DBA_TestShot</li>
    </abilities>
    <initialResistanceRange>10~16</initialResistanceRange>
  </PawnKindDef>

</Defs>
