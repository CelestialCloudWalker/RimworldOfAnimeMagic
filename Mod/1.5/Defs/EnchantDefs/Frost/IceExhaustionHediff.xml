<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>IceEnchantmentExhaustion</defName>
    <label>Frost Exhaustion</label>
    <description>Exhaustion from overextending the power of Frost Breathing, leading to increasing weakness, pain, and slowing of movement as the body succumbs to the cold.</description>
    <displayWound>false</displayWound>
    <hediffClass>HediffWithComps</hediffClass>
    <injuryProps>
      <painPerSeverity>0.05</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00025</averagePainPerSeverityPermanent>
      <bleedRate>0.000</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>destroyed</destroyedLabel>
      <destroyedOutLabel>destroyed</destroyedOutLabel>
    </injuryProps>
    <stages>
      <li>
        <label>Icy Strain</label>
        <minSeverity>0</minSeverity>
        <painFactor>1.05</painFactor>
        <statFactors>
          <IncomingDamageFactor>1.2</IncomingDamageFactor>
        </statFactors>
      </li>
      <li>
        <label>Frostbite Fatigue</label>
        <minSeverity>0.15</minSeverity>
        <painFactor>1.25</painFactor>
        <statFactors>
          <IncomingDamageFactor>1.2</IncomingDamageFactor>
        </statFactors>
      </li>
      <li>
        <label>Frozen Overload</label>
        <minSeverity>0.5</minSeverity>
        <painFactor>1.5</painFactor>
        <hungerRateFactor>1.25</hungerRateFactor>
        <restFallFactor>1.25</restFallFactor>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
        <statFactors>
          <IncomingDamageFactor>1.4</IncomingDamageFactor>
        </statFactors>
      </li>
      <li>
        <label>Glacial Collapse</label>
        <minSeverity>0.75</minSeverity>
        <painFactor>2.0</painFactor>
        <hungerRateFactor>1.5</hungerRateFactor>
        <restFallFactor>1.5</restFallFactor>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
        <statFactors>
          <IncomingDamageFactor>1.6</IncomingDamageFactor>
        </statFactors>
      </li>
      <li>
        <label>Shattered Resilience</label>
        <minSeverity>0.9</minSeverity>
        <painFactor>2.5</painFactor>
        <hungerRateFactor>2.0</hungerRateFactor>
        <restFallFactor>2.0</restFallFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
        <statFactors>
          <IncomingDamageFactor>2.0</IncomingDamageFactor>
        </statFactors>
        <statOffsets>
          <PainShockThreshold>-0.15</PainShockThreshold>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
</Defs>
