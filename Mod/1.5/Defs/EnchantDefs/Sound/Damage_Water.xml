<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <DamageDef>
    <defName>WaterBreathing</defName>
    <label>Water Breathing</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} was slain by Water breathing.</deathMessage>
    <hediff>WaterSlash</hediff>
    <hediffSkin>WaterSlash</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <armorCategory>Sharp</armorCategory>
    <impactSoundType>Slice</impactSoundType>
  </DamageDef>

  <HediffDef ParentName="InjuryBase">
    <defName>WaterSlash</defName>
    <label>Water slash</label>
    <labelNoun>a sound breathing wound</labelNoun>
    <description>A clean cut inflicted by sound Water technique.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <severityPerDayTended>-0.75</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.25</infectionChance>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.045</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
      <bleedRate>0.05</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>Severed</destroyedLabel>
      <destroyedOutLabel>Cut away</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
</Defs>
