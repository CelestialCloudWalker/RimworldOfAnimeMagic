<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>InsectBreathing_WisteriaPoisonBlade</defName>
    <label>Insect Breathing Wisteria Poison Blade</label>
    <description>A venomous toxin inspired by the deadly Wisteria, coursing through the bloodstream with each wound. Weakens the target's movement and combat capabilities as it spreads.</description>
    <displayWound>false</displayWound>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <minSeverity>0.0</minSeverity>
        <label>Empowered</label>
        <statOffsets>
          <MeleeHitChance>2</MeleeHitChance>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>Weakened</label>
        <statOffsets>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <label>Severely Weakened</label>
        <statOffsets>
          <MeleeHitChance>-2</MeleeHitChance>
        </statOffsets>
      </li>
    </stages>
    <injuryProps>
      <painPerSeverity>0.06</painPerSeverity>
      <averagePainPerSeverityPermanent>0.008</averagePainPerSeverityPermanent>
      <bleedRate>0.03</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>necrotic</destroyedLabel>
      <destroyedOutLabel>dissolved</destroyedOutLabel>
    </injuryProps>
    <comps>
      <li Class="AnimeArsenal.HediffCompProperties_Enchant">
        <damageType>AA_InsectBreathing_PoisonSting</damageType>
        <damageValue>10</damageValue>
      </li>
    </comps>
  </HediffDef>
</Defs>
