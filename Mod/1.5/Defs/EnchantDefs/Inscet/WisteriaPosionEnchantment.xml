<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>InsectBreathing_WisteriaPoisonBlade</defName>
    <label>Insect Breathing Wisteria Poison Blade</label>
    <description>A venomous toxin inspired by the deadly Wisteria, coursing through the bloodstream with each wound. Weakens the target's movement and combat capabilities as it spreads.</description>
    <displayWound>false</displayWound>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <minSeverity>0.0</minSeverity>
        <label>Empowered</label>
        <statOffsets>
          <MeleeHitChance>2</MeleeHitChance>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>Weakened</label>
        <statOffsets>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <label>Severely Weakened</label>
        <statOffsets>
          <MeleeHitChance>-2</MeleeHitChance>
        </statOffsets>
      </li>
    </stages>
    <injuryProps>
      <painPerSeverity>0.06</painPerSeverity>
      <averagePainPerSeverityPermanent>0.008</averagePainPerSeverityPermanent>
      <bleedRate>0.03</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>necrotic</destroyedLabel>
      <destroyedOutLabel>dissolved</destroyedOutLabel>
    </injuryProps>
    <comps>
      <li Class="AnimeArsenal.HediffCompProperties_Enchant">
        <damageType>AA_InsectBreathing_PoisonSting</damageType>
        <damageValue>10</damageValue>
      </li>
      <li Class="AnimeArsenal.HediffCompProperties_Overlay">
        <overlayGraphic Class="AnimeArsenal.GraphicDataWithShader">
          <drawSize>1.1</drawSize>
          <texPath>Starscourgedual</texPath>
          <graphicClass>AnimeArsenal.Graphic_SingleWithShader</graphicClass>
          <customShaderName>Shader Forge/EnchantShader_Additive</customShaderName>
          <shaderParameters>
            <_OverlayTex>/noise/Noise94</_OverlayTex>
            <!-- <_OverlayMask></_OverlayMask> -->
            <_FireColor>(0.7, 0.5, 0.9, 1.0)</_FireColor>
            <_Opacity>1</_Opacity>
            <_ShowEffect>1</_ShowEffect>
            <_OutlineOnly>1</_OutlineOnly>
            <_PanSpeedX>0</_PanSpeedX>
            <_PanSpeedY>-0.15</_PanSpeedY>
            <_FresnelColor>(1, 1, 1, 1)</_FresnelColor>
            <_FresnelExpo>0</_FresnelExpo>
            <_EdgeWidth>0.09</_EdgeWidth>
          </shaderParameters>
        </overlayGraphic>
      </li>
    </comps>
  </HediffDef>
</Defs>
