<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>FlameBreathingExhaustion</defName>
    <label>Flame Breathing Exhaustion</label>
    <description>The intense physical and mental toll of using Flame Breathing techniques. Prolonged use erodes the body and mind, leading to severe fatigue and eventual collapse if pushed too far. The user must rest to recover.</description>
    <displayWound>false</displayWound>
    <hediffClass>HediffWithComps</hediffClass>
    <injuryProps>
      <painPerSeverity>0.05</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00025</averagePainPerSeverityPermanent>
      <bleedRate>0.000</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>destroyed</destroyedLabel>
      <destroyedOutLabel>destroyed</destroyedOutLabel>
    </injuryProps>
    <stages>
      <li>
        <label>Smoldering Ember</label>
        <becomeVisible>true</becomeVisible>
        <minSeverity>0.05</minSeverity>
        <painFactor>1.05</painFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Flickering Flame</label>
        <minSeverity>0.10</minSeverity>
        <painFactor>1.20</painFactor>
        <hungerRateFactor>1.30</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Blazing Struggle</label>
        <minSeverity>0.25</minSeverity>
        <painFactor>1.45</painFactor>
        <hungerRateFactor>1.75</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.30</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Inferno's Toll</label>
        <minSeverity>0.35</minSeverity>
        <painFactor>1.40</painFactor>
        <hungerRateFactor>1.75</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.50</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.45</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
        <statFactors>
          <ShootingAccuracyPawn>0.75</ShootingAccuracyPawn>
          <MeleeHitChance>0.75</MeleeHitChance>
        </statFactors>
      </li>
      <li>
        <label>Flame's Endurance</label>
        <minSeverity>0.75</minSeverity>
        <painFactor>1.70</painFactor>
        <hungerRateFactor>2.00</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.70</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.65</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.35</offset>
          </li>
        </capMods>
        <statFactors>
          <ShootingAccuracyPawn>0.50</ShootingAccuracyPawn>
          <MeleeHitChance>0.50</MeleeHitChance>
        </statFactors>
      </li>
      <li>
        <label>Infernal Collapse</label>
        <minSeverity>0.9</minSeverity>
        <painFactor>1.90</painFactor>
        <hungerRateFactor>2.50</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.90</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.85</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.50</offset>
          </li>
        </capMods>
        <statFactors>
          <ShootingAccuracyPawn>0.25</ShootingAccuracyPawn>
          <MeleeHitChance>0.25</MeleeHitChance>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
</Defs>
