<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>PrimalEdge</defName>
    <label>Primal Edge</label>
    <description>The weapon emanates a primal, feral energy. Its strikes leave behind deep, savage wounds and an aura of raw power.</description>
    <displayWound>false</displayWound>
    <hediffClass>HediffWithComps</hediffClass>
    <injuryProps>
      <painPerSeverity>0.06</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00035</averagePainPerSeverityPermanent>
      <bleedRate>0.000</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>shattered</destroyedLabel>
      <destroyedOutLabel>ravaged</destroyedOutLabel>
    </injuryProps>
    <comps>
      <li Class="AnimeArsenal.HediffCompProperties_Enchant">
        <damageType>PrimalFang</damageType>
        <damageValue>7</damageValue>
      </li>
      <li Class="AnimeArsenal.HediffCompProperties_Overlay">
        <overlayGraphic Class="AnimeArsenal.GraphicDataWithShader">
          <drawSize>1.1</drawSize>
          <texPath>Starscourgedual</texPath>
          <graphicClass>AnimeArsenal.Graphic_SingleWithShader</graphicClass>
          <customShaderName>Shader Forge/EnchantShader_Additive</customShaderName>
          <shaderParameters>
            <_OverlayTex>/noise/Noise94</_OverlayTex>
            <!-- <_OverlayMask></_OverlayMask> -->
            <_FireColor>(77, 153, 230, 255)</_FireColor>
            <_Opacity>1</_Opacity>
            <_ShowEffect>1</_ShowEffect>
            <_OutlineOnly>1</_OutlineOnly>
            <_PanSpeedX>0</_PanSpeedX>
            <_PanSpeedY>-0.15</_PanSpeedY>
            <_FresnelColor>(1, 1, 1, 1)</_FresnelColor>
            <_FresnelExpo>0</_FresnelExpo>
            <_EdgeWidth>0.09</_EdgeWidth>
          </shaderParameters>
        </overlayGraphic>
      </li>
    </comps>
  </HediffDef>
</Defs>
