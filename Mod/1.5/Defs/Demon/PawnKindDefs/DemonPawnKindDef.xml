<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <PawnKindDef ParentName="BasePlayerPawnKind">
    <defName>AA_DemonColonist</defName>
    <label>Demon</label>
    <race>AA_DemonRace</race>
    <defaultFactionType>PlayerColony</defaultFactionType>
    <xenotypeSet>
      <xenotypeChances>
        <AA_DemonBloodArts_User>999</AA_DemonBloodArts_User>
      </xenotypeChances>
    </xenotypeSet>

    <!-- This is a required field. 13~21 is the default value for Crashlanded player colonists. -->
    <initialResistanceRange>13~21</initialResistanceRange>
  </PawnKindDef>

  <PawnKindDef Name="DemonBase" ParentName="BasePlayerPawnKind" Abstract="True">
    <race>AA_DemonRace</race>
    <defaultFactionType>Pirate</defaultFactionType>
    <xenotypeSet>
      <xenotypeChances>
        <AA_DemonBloodArts_User>999</AA_DemonBloodArts_User>
      </xenotypeChances>
    </xenotypeSet>
    <chemicalAddictionChance>0.1</chemicalAddictionChance>
    <invNutrition>2.55</invNutrition>
    <itemQuality>Normal</itemQuality>
    <backstoryCryptosleepCommonality>0.08</backstoryCryptosleepCommonality>
    <maxGenerationAge>65</maxGenerationAge>
    <combatEnhancingDrugsChance>0.15</combatEnhancingDrugsChance>
    <combatEnhancingDrugsCount>0~2</combatEnhancingDrugsCount>
    <biocodeWeaponChance>0.1</biocodeWeaponChance>
  </PawnKindDef>

</Defs>
