<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <DamageDef>
    <defName>Love_Breathing_Damage</defName>
    <label>Love Breathing</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0}'s heart gave out.</deathMessage>
    <hediff>HeartbeatsOfLove</hediff>
    <hediffSkin>HeartbeatsOfLove</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <armorCategory>Sharp</armorCategory>
    <impactSoundType>Slice</impactSoundType>
  </DamageDef>
  <HediffDef ParentName="InjuryBase">
    <defName>HeartbeatsOfLove</defName>
    <label>Heartbeats of Love</label>
    <labelNoun>heart strain</labelNoun>
    <description>Heart overexerted to dangerous levels. Chest pain and risk of sudden failure.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <severityPerDayTended>-0.72</severityPerDayTended>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0.1</minSeverity>
        <capMods>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.3</minSeverity>
        <capMods>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.5</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <capMods>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.8</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <capMods>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.9</offset>
          </li>
        </capMods>
        <lifeThreatening>true</lifeThreatening>
      </li>
    </stages>
    <injuryProps>
      <painPerSeverity>0.04</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
      <bleedRate>0.04</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>Severed</destroyedLabel>
      <destroyedOutLabel>Completely severed</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
</Defs>
