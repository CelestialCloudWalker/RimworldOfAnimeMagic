<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <DamageDef>
    <defName>Sound_Breathing_Damage</defName>
    <label>Sound Breathing</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} was shattered by violent sound wave.</deathMessage>
    <hediff>RipplesOfSound</hediff>
    <hediffSkin>RipplesOfSound</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <armorCategory>Blunt</armorCategory>
    <impactSoundType>Blunt</impactSoundType>
    <isExplosive>true</isExplosive>
    <explosionColorCenter>(0.9, 0.9, 1.0)</explosionColorCenter>
    <explosionColorEdge>(0.7, 0.8, 1.0)</explosionColorEdge>
    <soundExplosion>Thunder_OnMap</soundExplosion>
    <causeStun>true</causeStun>
    <constantStunDurationTicks>600</constantStunDurationTicks>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
  </DamageDef>
  <HediffDef ParentName="InjuryBase">
    <defName>RipplesOfSound</defName>
    <label>Ripples of Sound</label>
    <labelNoun>sonic trauma</labelNoun>
    <description>Body battered by intense sound waves. Hearing and internal organs damaged.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <severityPerDayTended>-0.75</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.25</infectionChance>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <capMods>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <capMods>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.8</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.7</minSeverity>
        <capMods>
          <li>
            <capacity>Hearing</capacity>
            <offset>-1.0</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <injuryProps>
      <painPerSeverity>0.045</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
      <bleedRate>0.05</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>Shattered</destroyedLabel>
      <destroyedOutLabel>Blown away</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
</Defs>
