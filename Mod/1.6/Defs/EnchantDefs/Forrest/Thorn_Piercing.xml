<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <DamageDef>
    <defName>Thorn_Piercing</defName>
    <label>Thorn Piercing</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} was impaled by Thorn Piercing.</deathMessage>
    <hediff>Barbed_Wounds</hediff>
    <hediffSkin>Barbed_Wounds</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <armorCategory>Sharp</armorCategory>
    <impactSoundType>Slice</impactSoundType>
    <harmsHealth>true</harmsHealth>
  </DamageDef>

  <HediffDef ParentName="InjuryBase">
    <defName>Barbed_Wounds</defName>
    <label>Barbed Wounds</label>
    <labelNoun>a barbed wound</labelNoun>
    <description>Injuries that catch and tear like thorns, becoming more painful with movement.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <severityPerDayTended>-0.68</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.45</infectionChance>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.06</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00825</averagePainPerSeverityPermanent>
      <bleedRate>0.09</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>Torn by Forest</destroyedLabel>
      <destroyedOutLabel>Overgrown</destroyedOutLabel>
    </injuryProps>
  </HediffDef>


</Defs>
