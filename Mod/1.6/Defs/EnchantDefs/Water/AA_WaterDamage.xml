          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
        <statFactors>
          <WorkSpeedGlobal>0.85</WorkSpeedGlobal>
          <MeleeDPS>0.8</MeleeDPS>
          <MeleeHitChance>0.9</MeleeHitChance>
          <MeleeDodgeChance>0.7</MeleeDodgeChance>
          <ShootingAccuracyPawn>0.85</ShootingAccuracyPawn>
          <AimingDelayFactor>1.3</AimingDelayFactor>
          <StaggerDurationFactor>1.4</StaggerDurationFactor>
          <Flammability>0</Flammability>
