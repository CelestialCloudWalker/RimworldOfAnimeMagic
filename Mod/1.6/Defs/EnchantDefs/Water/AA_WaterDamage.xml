      <painPerSeverity>0.02</painPerSeverity>
      <averagePainPerSeverityPermanent>0.005</averagePainPerSeverityPermanent>
      <bleedRate>0.01</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>Completely Soaked</destroyedLabel>
      <destroyedOutLabel>Evaporated</destroyedOutLabel>
    </injuryProps>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.5</initialSeverity>
  </HediffDef>
