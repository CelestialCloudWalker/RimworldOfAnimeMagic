<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <DamageDef>
    <defName>Water_Breathing_Damage</defName>
    <label>water slash</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} was drowned by crushing waves.</deathMessage>
    <hediff>FreshnessOfWater</hediff>
    <hediffSkin>FreshnessOfWater</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <armorCategory>Sharp</armorCategory>
    <impactSoundType>Slice</impactSoundType>
    <harmsHealth>true</harmsHealth>
    <makesBlood>true</makesBlood>
    <canInterruptJobs>true</canInterruptJobs>
  </DamageDef>

  <HediffDef ParentName="InjuryBase">
    <defName>FreshnessOfWater</defName>
    <label>water slash</label>
    <labelNoun>a water slash</labelNoun>
    <description>A clean cut. Heavy bleeding from severed tissue.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>bandaged</labelTendedWell>
        <labelTendedWellInner>sutured</labelTendedWellInner>
        <labelSolidTendedWell>set</labelSolidTendedWell>
        <severityPerDayTended>-0.75</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.05</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>water slash scar</permanentLabel>
        <becomePermanentChanceFactor>0.15</becomePermanentChanceFactor>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.0125</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
      <bleedRate>0.055</bleedRate>
      <canMerge>false</canMerge>
      <destroyedLabel>Cut off</destroyedLabel>
      <destroyedOutLabel>Cut out</destroyedOutLabel>
      <useRemovedLabel>true</useRemovedLabel>
    </injuryProps>
  </HediffDef>
</Defs>
