<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <DamageDef>
        <defName>Wisteria_Sting</defName>
        <label>Wisteria Sting</label>
        <workerClass>DamageWorker_AddInjury</workerClass>
        <hediff>Venomous_Puncture</hediff>
        <hediffSkin>Venomous_Puncture</hediffSkin>
        <armorCategory>Sharp</armorCategory>
        <defaultDamage>8</defaultDamage>
        <defaultArmorPenetration>0.5</defaultArmorPenetration>
        <buildingDamageFactor>0.2</buildingDamageFactor>
        <harmsHealth>true</harmsHealth>
        <canInterruptJobs>true</canInterruptJobs>
        <makesBlood>true</makesBlood>
        <externalViolence>true</externalViolence>
    </DamageDef>

    <HediffDef ParentName="InjuryBase">
        <defName>Venomous_Puncture</defName>
        <label>Venomous Puncture</label>
        <labelNoun>A Venomous Puncture</labelNoun>
        <description>Venomous damage caused by the Wisteria poison.</description>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.6</severityPerDay>
            </li>
            <li Class="HediffCompProperties_Infecter">
                <infectionChance>0.50</infectionChance>
            </li>
        </comps>
        <injuryProps>
            <painPerSeverity>0.06</painPerSeverity>
            <averagePainPerSeverityPermanent>0.008</averagePainPerSeverityPermanent>
            <bleedRate>0.03</bleedRate>
            <canMerge>true</canMerge>
            <destroyedLabel>Necrotic</destroyedLabel>
            <destroyedOutLabel>Dissolved</destroyedOutLabel>
        </injuryProps>
    </HediffDef>

    
    <HediffDef>
        <defName>Wisteria_Poisoningl</defName>
        <label>Wisteria Poisoning</label>
        <description>A lingering poison effect from wisteria toxins.</description>
        <displayWound>false</displayWound>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.6, 0.8, 0.3)</defaultLabelColor>
        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>true</isBad>
        <stages>
            <li>
                <painOffset>0.1</painOffset>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.05</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.8</severityPerDay>
            </li>
        </comps>
    </HediffDef>
</Defs>
