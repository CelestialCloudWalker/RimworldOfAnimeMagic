<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <DamageDef>
    <defName>Inscet_Breathing_Damage</defName>
    <label>insect sting</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0}'s body shut down from venom.</deathMessage>
    <hediff>DeludednessOfInsects</hediff>
    <hediffSkin>DeludednessOfInsects</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <impactSoundType>Slice</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <harmsHealth>true</harmsHealth>
    <overkillPctToDestroyPart>0.1</overkillPctToDestroyPart>
  </DamageDef>

  <HediffDef ParentName="InjuryBase">
    <defName>DeludednessOfInsects</defName>
    <label>insect sting</label>
    <labelNoun>an insect sting</labelNoun>
    <description>A venomous puncture wound. Poison spreading through tissue.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>bandaged</labelTendedWell>
        <labelTendedWellInner>treated</labelTendedWellInner>
        <labelSolidTendedWell>set</labelSolidTendedWell>
        <severityPerDayTended>-0.6</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.50</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>insect sting scar</permanentLabel>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.06</painPerSeverity>
      <averagePainPerSeverityPermanent>0.008</averagePainPerSeverityPermanent>
      <bleedRate>0.03</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>Dissolved off</destroyedLabel>
      <destroyedOutLabel>Dissolved</destroyedOutLabel>
    </injuryProps>
  </HediffDef>

  <HediffDef>
    <defName>Wisteria_Poisoning</defName>
    <label>wisteria poisoning</label>
    <description>A potent neurotoxin causing severe weakness, nausea, and mental impairment. The victim struggles to move and think clearly as poison courses through their system.</description>
    <displayWound>false</displayWound>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.4, 0.2, 0.8)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>true</isBad>
    <initialSeverity>0.5</initialSeverity>
    <stages>
      <li>
        <label>mild</label>
        <minSeverity>0.01</minSeverity>
        <painOffset>0.15</painOffset>
        <vomitMtbDays>8</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
        <statOffsets>
          <WorkSpeedGlobal>-0.25</WorkSpeedGlobal>
        </statOffsets>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
        <painOffset>0.25</painOffset>
        <vomitMtbDays>4</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.30</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
        <statOffsets>
          <WorkSpeedGlobal>-0.50</WorkSpeedGlobal>
        </statOffsets>
        <mentalStateGivers>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>15</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.70</minSeverity>
        <painOffset>0.40</painOffset>
        <vomitMtbDays>2</vomitMtbDays>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.50</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.30</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
        <statOffsets>
          <WorkSpeedGlobal>-0.80</WorkSpeedGlobal>
        </statOffsets>
        <mentalStateGivers>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>8</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.90</minSeverity>
        <painOffset>0.60</painOffset>
        <vomitMtbDays>1</vomitMtbDays>
        <lifeThreatening>true</lifeThreatening>
        <deathMtbDays>5</deathMtbDays>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <postFactor>0.25</postFactor>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.40</postFactor>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <postFactor>0.30</postFactor>
          </li>
          <li>
            <capacity>Talking</capacity>
            <postFactor>0.30</postFactor>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.40</offset>
          </li>
        </capMods>
        <statOffsets>
          <WorkSpeedGlobal>-0.95</WorkSpeedGlobal>
        </statOffsets>
        <mentalStateGivers>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>3</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.45</severityPerDay>
      </li>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.08</severityPerDayNotImmune>
        <severityPerDayNotImmuneRandomFactor>0.3~0.7</severityPerDayNotImmuneRandomFactor>
        <immunityPerDayNotSick>-0.30</immunityPerDayNotSick>
        <immunityPerDaySick>0.45</immunityPerDaySick>
        <severityPerDayImmune>-0.65</severityPerDayImmune>
      </li>
    </comps>
  </HediffDef>
</Defs>
