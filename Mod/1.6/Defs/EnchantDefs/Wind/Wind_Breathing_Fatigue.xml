<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>WindBreathing_Fatigue</defName>
    <label>Wind Breathing Fatigue</label>
    <description>The strain of repeated technique use leaves the body drained and unsteady.</description>
    <displayWound>false</displayWound>
    <hediffClass>HediffWithComps</hediffClass>

    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>15000</disappearsAfterTicks>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.02</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00015</averagePainPerSeverityPermanent>
      <bleedRate>0.000</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>broken</destroyedLabel>
      <destroyedOutLabel>shattered</destroyedOutLabel>
    </injuryProps>
    <stages>
      <li>
        <label>Mild fatigue</label>
        <becomeVisible>true</becomeVisible>
        <minSeverity>0.05</minSeverity>
        <painFactor>1.03</painFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.03</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.02</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Moderate fatigue</label>
        <minSeverity>.1</minSeverity>
        <painFactor>1.07</painFactor>
        <hungerRateFactor>1.10</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.07</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Heavy fatigue</label>
        <minSeverity>0.25</minSeverity>
        <painFactor>1.10</painFactor>
        <hungerRateFactor>1.15</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.12</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.09</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.03</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Severe fatigue</label>
        <minSeverity>0.35</minSeverity>
        <painFactor>1.15</painFactor>
        <hungerRateFactor>1.25</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.18</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.07</offset>
          </li>
        </capMods>
        <statFactors>
          <ShootingAccuracyPawn>0.90</ShootingAccuracyPawn>
          <MeleeHitChance>0.90</MeleeHitChance>
        </statFactors>
      </li>
      <li>
        <label>Exhausted</label>
        <minSeverity>0.75</minSeverity>
        <painFactor>1.20</painFactor>
        <hungerRateFactor>1.35</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.22</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
        <statFactors>
          <ShootingAccuracyPawn>0.80</ShootingAccuracyPawn>
          <MeleeHitChance>0.80</MeleeHitChance>
        </statFactors>
      </li>
      <li>
        <label>Collapsed</label>
        <minSeverity>0.9</minSeverity>
        <painFactor>1.30</painFactor>
        <hungerRateFactor>1.50</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.30</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
        <statFactors>
          <ShootingAccuracyPawn>0.70</ShootingAccuracyPawn>
          <MeleeHitChance>0.70</MeleeHitChance>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
</Defs>
