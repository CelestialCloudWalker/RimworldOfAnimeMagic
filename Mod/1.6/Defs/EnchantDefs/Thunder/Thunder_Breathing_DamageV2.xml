<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <DamageDef>
    <defName>Thunder_Breathing_Damage</defName>
    <label>lightning strike</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} was killed by a surge of lightning.</deathMessage>
    <hediff>BoltsOfThunder</hediff>
    <hediffSkin>BoltsOfThunder</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <armorCategory>Sharp</armorCategory>
    <impactSoundType>Slice</impactSoundType>
    <harmsHealth>true</harmsHealth>
    <causeStun>true</causeStun>
    <constantStunDurationTicks>540</constantStunDurationTicks>
  </DamageDef>

  <HediffDef ParentName="InjuryBase">
    <defName>BoltsOfThunder</defName>
    <label>lightning strike</label>
    <labelNoun>a lightning strike</labelNoun>
    <description>Tissue seared by electric current. Severe burns and nerve damage.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>bandaged</labelTendedWell>
        <labelTendedWellInner>sutured</labelTendedWellInner>
        <labelSolidTendedWell>set</labelSolidTendedWell>
        <severityPerDayTended>-0.70</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.30</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>lightning strike scar</permanentLabel>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.055</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00725</averagePainPerSeverityPermanent>
      <bleedRate>0.06</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>Electrocuted off</destroyedLabel>
      <destroyedOutLabel>Electrocuted</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
</Defs>
