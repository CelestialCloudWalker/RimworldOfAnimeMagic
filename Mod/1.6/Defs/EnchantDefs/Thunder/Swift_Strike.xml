    <defName>Swift_Strike</defName>
    <label>Swift Strike</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} was swiftly cut down by the strike.</deathMessage>
    <hediff>Lightning_Burns</hediff>
    <hediffSkin>Lightning_Burns</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <armorCategory>Sharp</armorCategory>
