<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <DamageDef>
    <defName>Thunder_Breathing_Damage</defName>
    <label>Thunder Breathing</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} was killed by a surge of lightning.</deathMessage>
    <hediff>BoltsOfThunder</hediff>
    <hediffSkin>BoltsOfThunder</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <armorCategory>Sharp</armorCategory>
    <impactSoundType>Slice</impactSoundType>
    <harmsHealth>true</harmsHealth>
    <causeStun>true</causeStun>
    <constantStunDurationTicks>540</constantStunDurationTicks>
  </DamageDef>
  <HediffDef ParentName="InjuryBase">
    <defName>BoltsOfThunder</defName>
    <label>Bolts of Thunder</label>
    <labelNoun>electrocution</labelNoun>
    <description>Muscles seized by an electric current. Nerves and organs sustaining critical damage.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <severityPerDayTended>-0.70</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.30</infectionChance>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.3</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.4</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <injuryProps>
      <painPerSeverity>0.055</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00725</averagePainPerSeverityPermanent>
      <bleedRate>0.06</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>Electrified</destroyedLabel>
      <destroyedOutLabel>Thunderstruck</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
</Defs>
