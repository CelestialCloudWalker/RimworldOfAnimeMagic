<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <DamageDef>
    <defName>Frost_Breathing_Damage</defName>
    <label>frost freeze</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} froze where they stood.</deathMessage>
    <hediff>FreezingOfFrost</hediff>
    <hediffSkin>FreezingOfFrost</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <impactSoundType>Slice</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <harmsHealth>true</harmsHealth>
    <overkillPctToDestroyPart>0.1</overkillPctToDestroyPart>
  </DamageDef>

  <HediffDef ParentName="InjuryBase">
    <defName>FreezingOfFrost</defName>
    <label>frost freeze</label>
    <labelNoun>a frost freeze</labelNoun>
    <description>Tissue frozen solid. Circulation halted and necrosis setting in.</description>
    <displayWound>false</displayWound>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>bandaged</labelTendedWell>
        <labelTendedWellInner>tended</labelTendedWellInner>
        <labelSolidTendedWell>tended</labelSolidTendedWell>
        <severityPerDayTended>-0.3</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.25</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>frost freeze scar</permanentLabel>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0.1</minSeverity>
        <statOffsets>
          <ComfyTemperatureMin>-5</ComfyTemperatureMin>
          <ComfyTemperatureMax>3</ComfyTemperatureMax>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.3</minSeverity>
        <statOffsets>
          <ComfyTemperatureMin>-12</ComfyTemperatureMin>
          <ComfyTemperatureMax>8</ComfyTemperatureMax>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <statOffsets>
          <ComfyTemperatureMin>-20</ComfyTemperatureMin>
          <ComfyTemperatureMax>15</ComfyTemperatureMax>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <statOffsets>
          <ComfyTemperatureMin>-30</ComfyTemperatureMin>
          <ComfyTemperatureMax>25</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
    <injuryProps>
      <painPerSeverity>0.02</painPerSeverity>
      <averagePainPerSeverityPermanent>0.01</averagePainPerSeverityPermanent>
      <bleedRate>0</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>Frozen off</destroyedLabel>
      <destroyedOutLabel>Frozen solid</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
</Defs>
