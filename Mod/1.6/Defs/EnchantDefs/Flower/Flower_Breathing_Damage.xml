<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <DamageDef>
    <defName>Flower_Breathing_Damage</defName>
    <label>Blossoming Slash</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} was overwhelmed by toxic fragrance.</deathMessage>
    <hediff>FragranceOfFlower</hediff>
    <hediffSkin>FragranceOfFlower</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <impactSoundType>Slice</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <causeStun>true</causeStun>
    <constantStunDurationTicks>300</constantStunDurationTicks>
  </DamageDef>

  <HediffDef ParentName="InjuryBase">
    <defName>FragranceOfFlower</defName>
    <label>Fragrance of Flower</label>
    <labelNoun>poisoning</labelNoun>
    <description>System weakend by toxic fumes. Body shutting down from internal damage.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <severityPerDayTended>-0.78</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.25</infectionChance>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.3</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <injuryProps>
      <painPerSeverity>0.0325</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
      <bleedRate>0.05</bleedRate>
      <canMerge>true</canMerge>
      <destroyedLabel>Cut off</destroyedLabel>
      <destroyedOutLabel>Cut out</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
</Defs>
