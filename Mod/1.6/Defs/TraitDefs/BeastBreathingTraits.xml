<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TraitDef>
    <defName>FeralInstincts</defName>
    <commonality>1</commonality>
    <forcedPassions>
      <li>Animals</li>
      <li>Melee</li>
    </forcedPassions>
    <degreeDatas>
      <li>
        <label>feral instincts</label>
        <description>[PAWN_nameDef] possesses animalistic instincts that enhance [PAWN_possessive] combat prowess and connection with beasts, but make [PAWN_objective] unsuited for civilized discourse.</description>
        <degree>1</degree>
        <statOffsets>
          <MeleeHitChance>8</MeleeHitChance>
          <MeleeDodgeChance>4</MeleeDodgeChance>
          <MoveSpeed>0.3</MoveSpeed>
          <SocialImpact>-0.25</SocialImpact>
          <NegotiationAbility>-0.4</NegotiationAbility>
          <ArrestSuccessChance>-0.3</ArrestSuccessChance>
          <AnimalGatherSpeed>0.3</AnimalGatherSpeed>
          <AnimalGatherYield>0.2</AnimalGatherYield>
          <TameAnimalChance>0.25</TameAnimalChance>
          <TrainAnimalChance>0.2</TrainAnimalChance>
        </statOffsets>
        <skillGains>
          <Animals>6</Animals>
          <Melee>4</Melee>
          <Social>-3</Social>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Beauty</li>
      <li>ShootingAccuracy</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </TraitDef>

  <TraitDef>
    <defName>PackHunter</defName>
    <commonality>1</commonality>
    <forcedPassions>
      <li>Shooting</li>
      <li>Melee</li>
    </forcedPassions>
    <degreeDatas>
      <li>
        <label>pack hunter</label>
        <description>[PAWN_nameDef] fights with the coordination of a pack predator. [PAWN_pronoun] excels in group combat and prefers fresh meat over cooked meals.</description>
        <degree>1</degree>
        <statOffsets>
          <ShootingAccuracyPawn>3</ShootingAccuracyPawn>
          <MeleeHitChance>5</MeleeHitChance>
          <CookSpeed>-0.5</CookSpeed>
          <ButcheryFleshSpeed>0.4</ButcheryFleshSpeed>
          <ButcheryFleshEfficiency>0.2</ButcheryFleshEfficiency>
        </statOffsets>
        <skillGains>
          <Shooting>3</Shooting>
          <Melee>2</Melee>
          <Cooking>-4</Cooking>
        </skillGains>
        <disallowedThoughts>
          <li>AteRawFood</li>
        </disallowedThoughts>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>WildSenses</defName>
    <commonality>1</commonality>
    <forcedPassions>
      <li>Shooting</li>
      <li>Animals</li>
    </forcedPassions>
    <degreeDatas>
      <li>
        <label>wild senses</label>
        <description>[PAWN_nameDef] has heightened senses like those of a wild animal. [PAWN_pronoun] can detect danger before others but requires more food to sustain [PAWN_possessive] enhanced metabolism.</description>
        <degree>1</degree>
        <statOffsets>
          <TrapSpringChance>-0.6</TrapSpringChance>
          <HuntingStealth>0.4</HuntingStealth>
          <RestRateMultiplier>1.15</RestRateMultiplier>
          <BedHungerRateFactor>1.25</BedHungerRateFactor>
        </statOffsets>
        <skillGains>
          <Shooting>2</Shooting>
          <Animals>3</Animals>
        </skillGains>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>Territorial</defName>
    <commonality>1</commonality>
    <forcedPassions>
      <li>Construction</li>
      <li>Melee</li>
    </forcedPassions>
    <degreeDatas>
      <li>
        <label>territorial</label>
        <description>[PAWN_nameDef] has a strong territorial instinct. [PAWN_pronoun] fights fiercely when defending [PAWN_possessive] home and builds formidable fortifications, but doesn't play well with strangers.</description>
        <degree>1</degree>
        <statOffsets>
          <ConstructionSpeed>0.25</ConstructionSpeed>
          <ConstructSuccessChance>0.15</ConstructSuccessChance>
          <SocialImpact>-0.4</SocialImpact>
          <MeleeHitChance>6</MeleeHitChance>
        </statOffsets>
        <skillGains>
          <Construction>4</Construction>
          <Melee>3</Melee>
          <Social>-2</Social>
        </skillGains>
        <marketValueFactorOffset>-0.05</marketValueFactorOffset>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Beauty</li>
    </conflictingTraits>
  </TraitDef>

  <TraitDef>
    <defName>PrimalRage</defName>
    <commonality>0.5</commonality>
    <forcedPassions>
      <li>Melee</li>
    </forcedPassions>
    <degreeDatas>
      <li>
        <label>primal rage</label>
        <description>[PAWN_nameDef] channels primal fury when wounded. Pain only makes [PAWN_objective] more dangerous in combat, though [PAWN_possessive] wild nature makes delicate work nearly impossible.</description>
        <degree>1</degree>
        <statOffsets>
          <PainShockThreshold>0.25</PainShockThreshold>
          <MeleeHitChance>4</MeleeHitChance>
          <MeleeDPS>0.15</MeleeDPS>
          <SurgerySuccessChanceFactor>-0.6</SurgerySuccessChanceFactor>
          <FixBrokenDownBuildingSuccessChance>-0.4</FixBrokenDownBuildingSuccessChance>
          <CookSpeed>-0.5</CookSpeed>
          <GeneralLaborSpeed>-0.3</GeneralLaborSpeed>
        </statOffsets>
        <skillGains>
          <Melee>5</Melee>
          <Medicine>-4</Medicine>
          <Crafting>-3</Crafting>
        </skillGains>
        <marketValueFactorOffset>-0.1</marketValueFactorOffset>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>ShootingAccuracy</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </TraitDef>

</Defs>
