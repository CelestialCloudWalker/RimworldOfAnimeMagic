<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TraitDef>
    <defName>LightningReflexes</defName>
    <commonality>0.8</commonality>
    <degreeDatas>
      <li>
        <label>lightning reflexes</label>
        <description>[PAWN_nameDef] moves with the speed of a lightning strike. [PAWN_possessive] incredible reflexes give [PAWN_objective] the first strike in any encounter, though such speed comes with its own challenges.</description>
        <degree>1</degree>
        <statOffsets>
          <MoveSpeed>0.5</MoveSpeed>
          <WorkSpeedGlobal>0.25</WorkSpeedGlobal>
          <MeleeHitChance>10</MeleeHitChance>
          <MeleeDodgeChance>12</MeleeDodgeChance>
          <RestRateMultiplier>0.8</RestRateMultiplier>
        </statOffsets>
        <skillGains>
          <Melee>5</Melee>
          <Shooting>3</Shooting>
        </skillGains>
        <marketValueFactorOffset>0.18</marketValueFactorOffset>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>StormCaller</defName>
    <commonality>0.7</commonality>
    <degreeDatas>
      <li>
        <label>storm caller</label>
        <description>[PAWN_nameDef] draws power from thunderstorms and electrical energy. [PAWN_possessive] abilities surge during storms, and [PAWN_pronoun] seems immune to electrical hazards.</description>
        <degree>1</degree>
        <statOffsets>
          <WorkSpeedGlobal>0.15</WorkSpeedGlobal>
          <MentalBreakThreshold>8</MentalBreakThreshold>
          <ImmunityGainSpeed>0.2</ImmunityGainSpeed>
        </statOffsets>
        <skillGains>
          <Crafting>3</Crafting>
          <Construction>2</Construction>
        </skillGains>
        <marketValueFactorOffset>0.1</marketValueFactorOffset>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>ElectricTouch</defName>
    <commonality>0.6</commonality>
    <forcedPassions>
      <li>Crafting</li>
    </forcedPassions>
    <degreeDatas>
      <li>
        <label>electric touch</label>
        <description>[PAWN_nameDef] channels electrical energy through [PAWN_possessive] hands. [PAWN_possessive] natural affinity with electronics makes [PAWN_objective] exceptionally skilled at crafting and repairing electrical devices.</description>
        <degree>1</degree>
        <statOffsets>
          <WorkSpeedGlobal>0.4</WorkSpeedGlobal>
          <FixBrokenDownBuildingSuccessChance>0.5</FixBrokenDownBuildingSuccessChance>
          <ResearchSpeed>0.2</ResearchSpeed>
        </statOffsets>
        <skillGains>
          <Crafting>6</Crafting>
          <Intellectual>3</Intellectual>
        </skillGains>
        <marketValueFactorOffset>0.15</marketValueFactorOffset>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>FlashStep</defName>
    <commonality>0.5</commonality>
    <degreeDatas>
      <li>
        <label>flash step</label>
        <description>[PAWN_nameDef] can move in sudden bursts of incredible speed. [PAWN_possessive] lightning-fast movement allows for quick escapes and rapid rescue operations, though sustained speed taxes [PAWN_possessive] body.</description>
        <degree>1</degree>
        <statOffsets>
          <MoveSpeed>0.6</MoveSpeed>
          <MeleeDodgeChance>15</MeleeDodgeChance>
          <CarryingCapacity>-20</CarryingCapacity>
          <BedHungerRateFactor>1.2</BedHungerRateFactor>
        </statOffsets>
        <skillGains>
          <Melee>3</Melee>
          <Medicine>2</Medicine>
        </skillGains>
        <marketValueFactorOffset>0.08</marketValueFactorOffset>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>ChainLightning</defName>
    <commonality>0.3</commonality>
    <forcedPassions>
      <li>Shooting</li>
      <li>Melee</li>
    </forcedPassions>
    <degreeDatas>
      <li>
        <label>chain lightning</label>
        <description>[PAWN_nameDef] strikes with electrical energy that arcs between multiple targets. [PAWN_possessive] attacks become more effective against groups, and [PAWN_pronoun] excels with conductive weapons.</description>
        <degree>1</degree>
        <statOffsets>
          <ShootingAccuracyPawn>6</ShootingAccuracyPawn>
          <MeleeHitChance>8</MeleeHitChance>
          <WorkSpeedGlobal>0.3</WorkSpeedGlobal>
        </statOffsets>
        <skillGains>
          <Shooting>4</Shooting>
          <Melee>4</Melee>
          <Crafting>2</Crafting>
        </skillGains>
        <marketValueFactorOffset>0.12</marketValueFactorOffset>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>ThunderousPresence</defName>
    <commonality>0.8</commonality>
    <forcedPassions>
      <li>Social</li>
      <li>Melee</li>
    </forcedPassions>
    <degreeDatas>
      <li>
        <label>thunderous presence</label>
        <description>[PAWN_nameDef] commands attention like a clap of thunder. [PAWN_possessive] booming voice and imposing presence make [PAWN_objective] a natural leader, though subtlety is not [PAWN_possessive] strength.</description>
        <degree>1</degree>
        <statOffsets>
          <SocialImpact>0.6</SocialImpact>
          <MeleeHitChance>8</MeleeHitChance>
          <HuntingStealth>-0.8</HuntingStealth>
          <ArrestSuccessChance>0.3</ArrestSuccessChance>
        </statOffsets>
        <skillGains>
          <Social>5</Social>
          <Melee>4</Melee>
        </skillGains>
        <marketValueFactorOffset>0.1</marketValueFactorOffset>
      </li>
    </degreeDatas>
