<Defs>
  <HediffDef Name="BreathingMarkBase" Abstract="True">
    <label>Breathing Mark</label>
    <description>A heightened state of awareness and physical enhancement. The mark's power gradually fades as exhaustion sets in.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <initialSeverity>1.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <label>minimal</label>
        <minSeverity>0.0</minSeverity>
        <statFactors>
          <IncomingDamageFactor>0.95</IncomingDamageFactor>
        </statFactors>
        <painFactor>0.95</painFactor>
      </li>
      <li>
        <label>fading</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
        <statFactors>
          <IncomingDamageFactor>0.85</IncomingDamageFactor>
        </statFactors>
        <painFactor>0.9</painFactor>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.4</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
        <statFactors>
          <IncomingDamageFactor>0.7</IncomingDamageFactor>
        </statFactors>
        <painFactor>0.75</painFactor>
      </li>
      <li>
        <label>strong</label>
        <minSeverity>0.6</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
        <statFactors>
          <IncomingDamageFactor>0.6</IncomingDamageFactor>
        </statFactors>
        <painFactor>0.6</painFactor>
        <hungerRateFactor>0.9</hungerRateFactor>
        <restFallFactor>0.9</restFallFactor>
      </li>
      <li>
        <label>peak power</label>
        <minSeverity>0.8</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.2</offset>
          </li>
        </capMods>
        <statFactors>
          <IncomingDamageFactor>0.5</IncomingDamageFactor>
        </statFactors>
        <statOffsets>
          <PainShockThreshold>0.15</PainShockThreshold>
        </statOffsets>
        <painFactor>0.5</painFactor>
        <hungerRateFactor>0.8</hungerRateFactor>
        <restFallFactor>0.8</restFallFactor>
      </li>
    </stages>
  </HediffDef>

