  <RecipeDef>
    <defName>Forge_ScarletSteel</defName>
    <label>forge scarlet steel</label>
    <description>Combine refined scarlet ore and refined scarlet crimson iron to forge scarlet steel. This is essential for creating Nichirin blades.</description>
    <jobString>Forging scarlet steel.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
