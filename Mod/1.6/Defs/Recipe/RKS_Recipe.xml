        <filter>
          <thingDefs>
            <li>Refined_Scarlet_Ore</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Refined_Scarlet_Crimson_Iron</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <products>
      <Scarlet_Steel>8</Scarlet_Steel>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Refined_Scarlet_Ore</li>
        <li>Refined_Scarlet_Crimson_Iron</li>
