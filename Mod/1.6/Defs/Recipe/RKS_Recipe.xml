  <RecipeDef>
    <defName>Refine_ScarletOre</defName>
    <label>refine scarlet ore</label>
    <description>Smelt and purify scarlet ore to extract refined scarlet ore.</description>
    <jobString>Refining scarlet ore.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
