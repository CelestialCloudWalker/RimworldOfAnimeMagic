<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>AnimeArsenal_FinalSelectionInvitation</defName>
    <label>Final Selection invitation</label>
    <description>An ornate letter sealed with the Demon Slayer Corps insignia. It contains an invitation to send three colonists to Mount Sagiri for the Final Selection - a seven-day survival trial against captured demons.\n\nUsing this item will summon a Corps guide to escort your chosen colonists to the trial grounds. Only the worthy will return.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Item/FinalSelectionInvitation</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.2</fillPercent>
    <pathCost>14</pathCost>
    <castEdgeShadows>false</castEdgeShadows>
    <rotatable>false</rotatable>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
    <statBases>
      <MarketValue>800</MarketValue>
      <Mass>2</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>800</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>2</Beauty>
    </statBases>
    <size>(1,1)</size>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <allowedArchonexusCount>1</allowedArchonexusCount>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <building>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Activate Final Selection invitation</useLabel>
        <useDuration>120</useDuration>
      </li>
      <li Class="AnimeArsenal.CompProperties_UseEffect_StartQuest">
        <questScriptDef>AnimeArsenal_MountSagiriFinalSelection</questScriptDef>
        <successMessage>{0} has activated the Final Selection invitation. A Demon Slayer Corps guide will arrive shortly.</successMessage>
        <failMessage>The Final Selection cannot be initiated at this time.</failMessage>
      </li>
    </comps>
  </ThingDef>
</Defs>
