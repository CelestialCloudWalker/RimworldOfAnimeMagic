<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>AnimeArsenal_FinalSelectionRock</defName>
    <label>Training rock</label>
    <description>A training rock that trigger the quest to become a slayer.</description>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Item/Rock</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.3</fillPercent>
    <pathCost>30</pathCost>
    <size>(1,1)</size>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Mass>50</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <costList>
      <Cloth>25</Cloth>
    </costList>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="AnimeArsenal.CompProperties_UseEffect_StartQuest">
        <compClass>AnimeArsenal.CompUseEffect_StartQuest</compClass>
        <questScriptDef>AnimeArsenal_MountSagiriFinalSelection</questScriptDef>
        <successMessage>{0} has summoned a Demon Slayer Corps guide. The Final Selection begins!</successMessage>
        <failMessage>Cannot start the Final Selection at this time. You need at least 3 free colonists.</failMessage>
      </li>
      <li Class="CompProperties_Usable">
        <compClass>CompUsable</compClass>
        <useJob>UseItem</useJob>
        <useLabel>Initiate Final Selection</useLabel>
        <useDuration>120</useDuration>
      </li>
    </comps>
    <designationCategory>Misc</designationCategory>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
  </ThingDef>

