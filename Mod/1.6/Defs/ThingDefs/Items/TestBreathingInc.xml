<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>AnimeArsenal_BreathingGourd_Small</defName>
    <label>small breathing gourd</label>
    <description>A small training gourd for beginners. Increases breathing capacity with moderate risk. Reward: +10% breathing, Risk: Low damage on failure.</description>
    <thingClass>AnimeArsenal.Building_TrainingItem</thingClass>
    <graphicData>
      <texPath>Things/Item/FinalSelectionInvitation</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.5</fillPercent>
    <pathCost>50</pathCost>
    <size>(1,1)</size>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>3000</WorkToBuild>
      <Mass>15</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <costList>
      <Scarlet_Thread_Fabric>15</Scarlet_Thread_Fabric>
      <Scarlet_Steel>8</Scarlet_Steel>
    </costList>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <designationCategory>Misc</designationCategory>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>AA_BreathingGourdCrafting</li>
    </researchPrerequisites>
    <modExtensions>
      <li Class="AnimeArsenal.TrainingItemExtension">
        <capacityToBoost>Breathing</capacityToBoost>
        <statToBoost></statToBoost>
        <increaseAmount>0.10</increaseAmount>
        <successChance>0.75</successChance>
        <failureBodyParts>
          <li>Lung</li>
        </failureBodyParts>
        <failureDamage>12</failureDamage>
        <trainingTime>1000</trainingTime>
        <cooldownTime>120000</cooldownTime>
      </li>
    </modExtensions>
  </ThingDef>

