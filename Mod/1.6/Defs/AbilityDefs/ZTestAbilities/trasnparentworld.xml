  <HediffDef>
    <defName>TransparentWorld_Flash</defName>
    <hediffClass>AnimeArsenal.Hediff_TransparentWorld</hediffClass>
    <label>transparent world (flash)</label>
    <description>Basic heightened perception allows brief glimpses through obstacles and slight combat improvements.</description>
    <isBad>false</isBad>
    <maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <statOffsets>
          <ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
          <MeleeHitChance>0.15</MeleeHitChance>
          <MoveSpeed>0.3</MoveSpeed>
          <AimingDelayFactor>-0.2</AimingDelayFactor>
          <MeleeDodgeChance>0.1</MeleeDodgeChance>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <modExtensions>
      <li Class="AnimeArsenal.TransparentWorldProperties">
        <sightRange>12</sightRange>
        <durationTicks>2400</durationTicks>
      </li>
    </modExtensions>
  </HediffDef>

