<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AbilityDef>
    <defName>ConeGasSpray</defName>
    <label>Toxic Gas Spray</label>
    <description>Spray a toxic gas that lingers in the area, continuously damaging enemies caught within.</description>
    <iconPath>UI/Icons/ComingSoon</iconPath>
    <cooldownTicksRange>30000</cooldownTicksRange>
    <aiCanUse>true</aiCanUse>
    <displayOrder>300</displayOrder>
    <category>Sanguophage</category>
    <sendMessageOnCooldownComplete>true</sendMessageOnCooldownComplete>
    <warmupStartSound>AcidSpray_Warmup</warmupStartSound>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>8.9</range>
      <warmupTime>0.5</warmupTime>
      <soundCast>AcidSpray_Resolve</soundCast>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetPawns>true</canTargetPawns>
        <canTargetItems>false</canTargetItems>
      </targetParams>
    </verbProperties>
    <comps>

      <li Class="AnimeArsenal.CompProperties_AbilityGasSpray">

        <gasDef>AnimeArsenal_ToxicMist</gasDef>
        <numCellsToHit>20</numCellsToHit>
        <gasLifetimeTicks>1800~3600</gasLifetimeTicks>
        <gasSpawnChance>0.8</gasSpawnChance>


        <damageDef>Burn</damageDef>
        <damageAmount>3~6</damageAmount>
        <damageIntervalTicks>15</damageIntervalTicks>
        <range>15</range>
        <angle>30</angle>


        <affectHostile>true</affectHostile>
        <affectNeutral>true</affectNeutral>
        <affectFriendly>false</affectFriendly>
        <affectAnimals>true</affectAnimals>
        <affectMechanoids>false</affectMechanoids>
      </li>
    </comps>
  </AbilityDef>


  <ThingDef>
    <defName>AnimeArsenal_ToxicMist</defName>
    <label>toxic mist</label>
    <description>A lingering toxic mist that damages those who breathe it.</description>
    <thingClass>Gas</thingClass>
    <category>Ethereal</category>
    <drawerType>RealtimeOnly</drawerType>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Gas</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <destroyOnDrop>true</destroyOnDrop>
    <drawOffscreen>true</drawOffscreen>
    <drawGUIOverlay>false</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>0</pathCost>
    <passability>Standable</passability>
    <fillPercent>0</fillPercent>
    <selectable>false</selectable>
    <statBases>
      <Flammability>0</Flammability>
    </statBases>
    <graphicData>
      <texPath>Things/Mote/SmokeCloud</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <color>(0.2, 0.8, 0.2, 0.7)</color>
      <drawSize>(1.5, 1.5)</drawSize>
    </graphicData>
    <gas>
      <expireSeconds>30~60</expireSeconds>
      <rotationSpeed>2</rotationSpeed>
    </gas>
  </ThingDef>
</Defs>
