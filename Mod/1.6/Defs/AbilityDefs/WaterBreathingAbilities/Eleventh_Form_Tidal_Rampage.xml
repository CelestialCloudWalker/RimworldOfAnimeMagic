<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Eleventh_Form_Tidal_Rampage</defName>
    <label>Eleventh Form: Tidal Rampage</label>
    <category>WaterBreathing_Ability_Catergory</category>
    <description>The user unleashes a devastating tidal wave that crashes into all enemies in a wide radius around them. The overwhelming water pressure tears through anything nearby with crushing force. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/AbilityDash</iconPath>
    <cooldownTicksRange>900</cooldownTicksRange>
    <targetRequired>true</targetRequired>

    
    <requiredGeneDefName>Gene_WaterBreath</requiredGeneDefName>
    <resourceCost>25</resourceCost>
    <baseExperienceGain>30</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>12</range>
      <warmupTime>1.0</warmupTime>
      <noiseRadius>8</noiseRadius>
      <requireLineOfSight>false</requireLineOfSight>
      <targetParams>
        <canTargetSelf>false</canTargetSelf>
        <canTargetPawns>true</canTargetPawns>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>

    
    <comps>
      <li Class="EMF.CompProperties_AbilityDamageInRadius">
        <radius>4</radius>
        <damageParms>
          <damageAmount>8~12</damageAmount>
          <damageDef>Water_Pressure</damageDef>
        </damageParms>
        <friendlyFireParms>
          <canTargetHostile>true</canTargetHostile>
          <canTargetNeutral>true</canTargetNeutral>
          <canTargetFriendly>false</canTargetFriendly>
        </friendlyFireParms>

      </li>
    </comps>

    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic tidal wave that damages nearby enemies with moderate water pressure damage.</description>
      </li>

      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>250</experienceRequired>
        <description>An improved tidal rampage with wider reach and increased water pressure per target.</description>
        <resourceCostMultiplier>1.2</resourceCostMultiplier>
        <rangeMultiplier>1.1</rangeMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>5</radius>
            <damageParms>
              <damageAmount>12~16</damageAmount>
              <damageDef>Water_Pressure</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>

          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>500</experienceRequired>
        <description>A devastating tidal rampage with extended radius and crushing water pressure that can penetrate heavy armor.</description>
        <resourceCostMultiplier>1.4</resourceCostMultiplier>
        <rangeMultiplier>1.25</rangeMultiplier>
        <cooldownMultiplier>0.9</cooldownMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>6</radius>
            <damageParms>
              <damageAmount>16~20</damageAmount>
              <damageDef>Water_Pressure</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
            <explosionEffecterDef></explosionEffecterDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>800</experienceRequired>
        <description>The ultimate tidal rampage - maximum area coverage with devastating water pressure that can flood battlefields and crush any enemy with overwhelming force.</description>
        <resourceCostMultiplier>1.6</resourceCostMultiplier>
        <rangeMultiplier>1.5</rangeMultiplier>
        <cooldownMultiplier>0.8</cooldownMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>7</radius>
            <damageParms>
              <damageAmount>20~28</damageAmount>
              <damageDef>Water_Pressure</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
            <explosionEffecterDef></explosionEffecterDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>
</Defs>
