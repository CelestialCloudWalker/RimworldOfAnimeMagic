<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Thirteenth_Form_Dividing_Riverbed</defName>
    <label>Thirteenth Form: Dividing Riverbed</label>
    <category>WaterBreathing_Ability_Catergory</category>
    <description>A wild, instinctive counter that deflects incoming projectiles like a flowing river dividing around rocks. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/DeflectAbility</iconPath>
    <targetRequired>false</targetRequired>

    
    <requiredGeneDefName>Gene_WaterBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>8</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>-1</range>
    </verbProperties>

    
    <comps>
      <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
        <Radius>4</Radius>
        <TicksActive>1000</TicksActive>
        <MaxShotsToReflect>15</MaxShotsToReflect>
        <effecterDef>AnimeArsenal_WaterDeflect</effecterDef>
        <hediffDef>AnimeArsenal_WaterDeflectionField</hediffDef>
      </li>
    </comps>

    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic instinctive counter that deflects incoming projectiles like water flowing around obstacles.</description>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>4</Radius>
            <TicksActive>1000</TicksActive>
            <MaxShotsToReflect>15</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_WaterDeflect</effecterDef>
            <hediffDef>AnimeArsenal_WaterDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>120</experienceRequired>
        <description>An improved riverbed technique with wider flow and longer protection duration.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>5</Radius>
            <TicksActive>1250</TicksActive>
            <MaxShotsToReflect>20</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_WaterDeflect</effecterDef>
            <hediffDef>AnimeArsenal_WaterDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>300</experienceRequired>
        <description>A superior riverbed technique with expanded coverage and enhanced deflection capacity.</description>
        <resourceCostMultiplier>0.9</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>6.5</Radius>
            <TicksActive>1500</TicksActive>
            <MaxShotsToReflect>30</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_WaterDeflect</effecterDef>
            <hediffDef>AnimeArsenal_WaterDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>600</experienceRequired>
        <description>The ultimate dividing riverbed - like a mighty river that parts around any obstacle, deflecting massive volleys with grace.</description>
        <resourceCostMultiplier>0.8</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>8.5</Radius>
            <TicksActive>2000</TicksActive>
            <MaxShotsToReflect>45</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_WaterDeflect</effecterDef>
            <hediffDef>AnimeArsenal_WaterDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>

  <HediffDef>
    <defName>AnimeArsenal_WaterDeflectionField</defName>
    <label>water deflection field</label>
    <description>A flowing field of water energy that deflects incoming projectiles like a river dividing around rocks.</description>
    <hediffClass>AnimeArsenal.Hediff_DeflectionField</hediffClass>
    <defaultLabelColor>(0.6, 0.8, 1.0)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>1000</min>
          <max>1000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>
</Defs>
