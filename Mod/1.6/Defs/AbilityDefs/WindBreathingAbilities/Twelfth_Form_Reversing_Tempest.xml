<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Twelfth_Form_Reversing_Tempest</defName>
    <label>Twelfth Form: Reversing Tempest</label>
    <category>WindBreathing_Ability_Catergory</category>
    <description>The user performs a powerful and swift circular slash that creates a reversing wind tempest to deflect incoming projectiles. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/DeflectAbility</iconPath>
    <targetRequired>false</targetRequired>

    
    <requiredGeneDefName>Gene_WindBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>8</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>-1</range>
    </verbProperties>

    
    <comps>
      <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
        <Radius>5</Radius>
        <TicksActive>1250</TicksActive>
        <MaxShotsToReflect>20</MaxShotsToReflect>
        <effecterDef>AnimeArsenal_WindDeflect</effecterDef>
        <hediffDef>AnimeArsenal_WindDeflectionField</hediffDef>
      </li>
    </comps>

    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic circular wind slash that creates a tempest to deflect incoming projectiles.</description>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>5</Radius>
            <TicksActive>1250</TicksActive>
            <MaxShotsToReflect>20</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_WindDeflect</effecterDef>
            <hediffDef>AnimeArsenal_WindDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>120</experienceRequired>
        <description>An improved reversing tempest with stronger winds and wider coverage.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>6</Radius>
            <TicksActive>1500</TicksActive>
            <MaxShotsToReflect>25</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_WindDeflect</effecterDef>
            <hediffDef>AnimeArsenal_WindDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>300</experienceRequired>
        <description>A superior reversing tempest with powerful gale-force winds and extended protection.</description>
        <resourceCostMultiplier>0.9</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>7.5</Radius>
            <TicksActive>1750</TicksActive>
            <MaxShotsToReflect>35</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_WindDeflect</effecterDef>
            <hediffDef>AnimeArsenal_WindDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>600</experienceRequired>
        <description>The ultimate reversing tempest - a massive cyclonic barrier that can deflect entire volleys with hurricane-force winds.</description>
        <resourceCostMultiplier>0.8</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>10</Radius>
            <TicksActive>2500</TicksActive>
            <MaxShotsToReflect>50</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_WindDeflect</effecterDef>
            <hediffDef>AnimeArsenal_WindDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>

  <HediffDef>
    <defName>AnimeArsenal_WindDeflectionField</defName>
    <label>wind deflection field</label>
    <description>A swirling tempest of wind that deflects incoming projectiles.</description>
    <hediffClass>AnimeArsenal.Hediff_DeflectionField</hediffClass>
    <defaultLabelColor>(0.8, 1.0, 1.0)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>1250</min>
          <max>1250</max>
        </disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>
</Defs>
