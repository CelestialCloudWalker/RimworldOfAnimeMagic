<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Love_Breathing_Slash</defName>
    <label>Love Breathing: Slash</label>
    <category>LoveBreathing_Ability_Catergory</category>
    <description>The user delivers a diagonal slash with its sword, launching a passionate projectile attack. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/AbilityProjectile</iconPath>
    <cooldownTicksRange>60</cooldownTicksRange>
    <targetRequired>true</targetRequired>
    <displayOrder>200</displayOrder>
    <aiCanUse>true</aiCanUse>
    <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>


    <requiredGeneDefName>Gene_LoveBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>10</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>20</range>
      <warmupTime>0.5</warmupTime>
      <soundCast>FireSpew_Resolve</soundCast>
      <targetParams>
        <canTargetPawns>true</canTargetPawns>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>


    <comps>
      <li Class="CompProperties_AbilityLaunchProjectile">
        <projectileDef>Insect_Breath_Slice_Projectile</projectileDef>
      </li>
    </comps>

    <levels>

      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic diagonal slash that launches a yearning projectile filled with passionate emotion.</description>
      </li>


      <li>
        <labelSuffix> (Gleam)</labelSuffix>
        <experienceRequired>100</experienceRequired>
        <description>An improved slash with enhanced projectile speed and deeper yearning power.</description>
        <resourceCostMultiplier>1.1</resourceCostMultiplier>
        <rangeMultiplier>1.2</rangeMultiplier>
        <cooldownMultiplier>0.9</cooldownMultiplier>
        <levelComps>
          <li Class="CompProperties_AbilityLaunchProjectile">
            <projectileDef>Insect_Breath_Slice_Projectile_Enhanced</projectileDef>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Mirage)</labelSuffix>
        <experienceRequired>250</experienceRequired>
        <description>A devastating slash that launches multiple yearning projectiles, each carrying intense emotional power.</description>
        <resourceCostMultiplier>1.4</resourceCostMultiplier>
        <rangeMultiplier>1.3</rangeMultiplier>
        <cooldownMultiplier>0.85</cooldownMultiplier>
        <levelComps>
          <li Class="CompProperties_AbilityLaunchProjectile">
            <projectileDef>Insect_Breath_Slice_Projectile_Multi</projectileDef>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Erelong)</labelSuffix>
        <experienceRequired>500</experienceRequired>
        <description>The ultimate distance of yearning - launches a barrage of passionate projectiles with overwhelming emotional force.</description>
        <resourceCostMultiplier>1.6</resourceCostMultiplier>
        <rangeMultiplier>1.5</rangeMultiplier>
        <cooldownMultiplier>0.8</cooldownMultiplier>
        <levelComps>
          <li Class="CompProperties_AbilityLaunchProjectile">
            <projectileDef>Insect_Breath_Slice_Projectile_Erelong</projectileDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>
</Defs>
