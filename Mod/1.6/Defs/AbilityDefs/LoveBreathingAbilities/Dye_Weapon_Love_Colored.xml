<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Dye_Weapon_Love_Colored</defName>
    <label>Dye Weapon: Love Colored</label>
    <category>LoveBreathing_Ability_Catergory</category>
    <description>The user channels their breathing style into their weapon, creating a powerful enchantment. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/AbilityEmbu</iconPath>
    <targetRequired>false</targetRequired>

    <requiredGeneDefName>Gene_LoveBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>5</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>-1</range>
    </verbProperties>

    <comps>
      <li Class="AnimeArsenal.CompProperties_ToggleEnchant">
        <enchantDef>Love_Blade_Technique</enchantDef>
      </li>
    </comps>
    <levels>

      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic weapon enchantment that imbues attacks with passionate energy.</description>
      </li>

      <li>
        <labelSuffix> (Gleam)</labelSuffix>
        <experienceRequired>200</experienceRequired>
        <description>An improved enchantment with stronger passionate energy and reduced maintenance cost.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_ToggleEnchant">
            <enchantDef>Love_Blade_Technique_Enhanced</enchantDef>
          </li>
        </levelComps>
      </li>

      <li>
        <labelSuffix> (Mirage)</labelSuffix>
        <experienceRequired>450</experienceRequired>
        <description>A superior enchantment that significantly enhances weapon damage and efficiency.</description>
        <resourceCostMultiplier>0.9</resourceCostMultiplier>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_ToggleEnchant">
            <enchantDef>Love_Blade_Technique_Superior</enchantDef>
          </li>
        </levelComps>
      </li>

      <li>
        <labelSuffix> (Erelong)</labelSuffix>
        <experienceRequired>750</experienceRequired>
        <description>The ultimate weapon enchantment - maximum passionate damage with minimal resource drain.</description>
        <resourceCostMultiplier>0.8</resourceCostMultiplier>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_ToggleEnchant">
            <enchantDef>Love_Blade_Technique_Erelong</enchantDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>
</Defs>
