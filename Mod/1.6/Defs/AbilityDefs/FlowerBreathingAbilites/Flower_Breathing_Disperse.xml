<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Flower_Breathing_Disperse</defName>
    <label>Flower Breathing: Disperse</label>
    <category>FlowerBreathing_Ability_Catergory</category>
    <description>The user releases a devastating shower of razor-sharp petals that slice through all enemies in a wide radius around them. The graceful yet deadly power of the flower breathing technique cuts through anything nearby. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Icons/ComingSoon</iconPath>
    <cooldownTicksRange>900</cooldownTicksRange>
    <targetRequired>true</targetRequired>


    <requiredGeneDefName>Gene_FlowerBreath</requiredGeneDefName>
    <resourceCost>25</resourceCost>
    <baseExperienceGain>30</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>12</range>
      <warmupTime>1.0</warmupTime>
      <noiseRadius>8</noiseRadius>
      <requireLineOfSight>false</requireLineOfSight>
      <targetParams>
        <canTargetSelf>false</canTargetSelf>
        <canTargetPawns>true</canTargetPawns>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>


    <comps>
      <li Class="EMF.CompProperties_AbilityDamageInRadius">
        <radius>4</radius>
        <damageParms>
          <damageAmount>8~12</damageAmount>
          <damageDef>Flower_Breathing_Damage</damageDef>
        </damageParms>
        <friendlyFireParms>
          <canTargetHostile>true</canTargetHostile>
          <canTargetNeutral>true</canTargetNeutral>
          <canTargetFriendly>false</canTargetFriendly>
        </friendlyFireParms>
        <explosionEffecterDef>AnimeArsenal_FlowerHitMote2</explosionEffecterDef>
      </li>
    </comps>

    <levels>

      <li>
        <labelSuffix> (Flash)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic area attack that surrounds enemies with cutting petals dealing moderate slashing damage.</description>
      </li>


      <li>
        <labelSuffix> (Gleam)</labelSuffix>
        <experienceRequired>250</experienceRequired>
        <description>An improved rampage with wider petal spread and increased cutting damage per target.</description>
        <resourceCostMultiplier>1.2</resourceCostMultiplier>
        <rangeMultiplier>1.1</rangeMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>5</radius>
            <damageParms>
              <damageAmount>12~16</damageAmount>
              <damageDef>Flower_Breathing_Damage</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Mirage)</labelSuffix>
        <experienceRequired>500</experienceRequired>
        <description>A devastating rampage with extended radius and brutal petal slashes that can slice through armor with elegant precision.</description>
        <resourceCostMultiplier>1.4</resourceCostMultiplier>
        <rangeMultiplier>1.25</rangeMultiplier>
        <cooldownMultiplier>0.9</cooldownMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>6</radius>
            <damageParms>
              <damageAmount>16~20</damageAmount>
              <damageDef>Flower_Breathing_Damage</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Erelong)</labelSuffix>
        <experienceRequired>800</experienceRequired>
        <description>The ultimate petal storm rampage - maximum area coverage with devastating slashing damage that can shred buildings and elegantly cut down any enemy in a beautiful dance of destruction.</description>
        <resourceCostMultiplier>1.6</resourceCostMultiplier>
        <rangeMultiplier>1.5</rangeMultiplier>
        <cooldownMultiplier>0.8</cooldownMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>7</radius>
            <damageParms>
              <damageAmount>20~28</damageAmount>
              <damageDef>Flower_Breathing_Damage</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
