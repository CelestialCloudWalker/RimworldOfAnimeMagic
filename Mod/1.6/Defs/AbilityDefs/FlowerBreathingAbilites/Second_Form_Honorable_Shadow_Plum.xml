<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Second_Form_Honorable_Shadow_Plum</defName>
    <label>Second Form: Honorable Shadow Plum</label>
    <category>FlowerBreathing_Ability_Catergory</category>
    <description>The user performs a powerful and swift circular slash surrounded by shadowy plum blossoms that can deflect incoming projectiles. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/DeflectAbility</iconPath>
    <targetRequired>false</targetRequired>

    
    <requiredGeneDefName>Gene_FlowerBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>8</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>-1</range>
    </verbProperties>

    
    <comps>
      <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
        <Radius>4</Radius>
        <TicksActive>1000</TicksActive>
        <MaxShotsToReflect>15</MaxShotsToReflect>
        <effecterDef>AnimeArsenal_FlowerDeflect</effecterDef>
        <hediffDef>AnimeArsenal_ShadowPlumField</hediffDef>
      </li>
    </comps>

    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic circular slash surrounded by shadowy plum blossoms that deflects projectiles in a modest area.</description>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>4</Radius>
            <TicksActive>1000</TicksActive>
            <MaxShotsToReflect>15</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_FlowerDeflect</effecterDef>
            <hediffDef>AnimeArsenal_ShadowPlumField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>120</experienceRequired>
        <description>An improved shadow plum technique with denser blossom coverage and longer duration.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>5</Radius>
            <TicksActive>1250</TicksActive>
            <MaxShotsToReflect>20</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_FlowerDeflect</effecterDef>
            <hediffDef>AnimeArsenal_ShadowPlumField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>300</experienceRequired>
        <description>A superior shadow plum technique with wide blossom coverage and extended graceful protection.</description>
        <resourceCostMultiplier>0.9</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>6.5</Radius>
            <TicksActive>1500</TicksActive>
            <MaxShotsToReflect>30</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_FlowerDeflect</effecterDef>
            <hediffDef>AnimeArsenal_ShadowPlumField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>600</experienceRequired>
        <description>The ultimate shadow plum - a magnificent field of dark blossoms that gracefully deflects massive volleys with elegant precision.</description>
        <resourceCostMultiplier>0.8</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>8</Radius>
            <TicksActive>2000</TicksActive>
            <MaxShotsToReflect>45</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_FlowerDeflect</effecterDef>
            <hediffDef>AnimeArsenal_ShadowPlumField</hediffDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>

  <HediffDef>
    <defName>AnimeArsenal_ShadowPlumField</defName>
    <label>shadow plum field</label>
    <description>A graceful field of shadowy plum blossoms that deflects incoming projectiles with precision.</description>
    <hediffClass>AnimeArsenal.Hediff_DeflectionField</hediffClass>
    <defaultLabelColor>(0.6, 0.4, 0.8)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>1000</min>
          <max>1000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>
</Defs>
