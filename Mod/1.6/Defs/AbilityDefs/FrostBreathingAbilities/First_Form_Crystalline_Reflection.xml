<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>First_Form_Crystalline_Reflection</defName>
    <label>First Form: Crystalline Reflection</label>
    <category>FrostBreathing_Ability_Catergory</category>
    <description>The user performs a powerful and swift circular slash that can blow away incoming projectiles. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/AbilityEmbu</iconPath>
    <targetRequired>false</targetRequired>

    
    <requiredGeneDefName>Gene_FrostBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>8</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>-1</range>
    </verbProperties>

    
    <comps>
      <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
        <Radius>4</Radius>
        <TicksActive>1000</TicksActive>
        <MaxShotsToReflect>15</MaxShotsToReflect>
        <effecterDef>AnimeArsenal_FrostDeflect</effecterDef>
        <hediffDef>AnimeArsenal_DeflectionField</hediffDef>
      </li>
    </comps>

    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic circular slash that deflects incoming projectiles in a moderate area.</description>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>4</Radius>
            <TicksActive>1000</TicksActive>
            <MaxShotsToReflect>15</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_FrostDeflect</effecterDef>
            <hediffDef>AnimeArsenal_DeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>120</experienceRequired>
        <description>An improved crystalline technique with larger radius and longer duration.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>5</Radius>
            <TicksActive>1250</TicksActive>
            <MaxShotsToReflect>20</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_FrostDeflect</effecterDef>
            <hediffDef>AnimeArsenal_DeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>300</experienceRequired>
        <description>A superior crystalline technique with wide coverage and extended protection.</description>
        <resourceCostMultiplier>0.9</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>6.5</Radius>
            <TicksActive>1500</TicksActive>
            <MaxShotsToReflect>30</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_FrostDeflect</effecterDef>
            <hediffDef>AnimeArsenal_DeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>600</experienceRequired>
        <description>The ultimate crystalline reflection - massive radius, extended duration, and can deflect enormous volleys with crystalline precision.</description>
        <resourceCostMultiplier>0.8</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>8</Radius>
            <TicksActive>2000</TicksActive>
            <MaxShotsToReflect>45</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_FrostDeflect</effecterDef>
            <hediffDef>AnimeArsenal_DeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>
</Defs>
