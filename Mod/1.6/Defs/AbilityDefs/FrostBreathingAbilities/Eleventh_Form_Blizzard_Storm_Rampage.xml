<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Eleventh_Form_Blizzard_Storm_Rampage</defName>
    <label>Eleventh Form: Blizzard Storm Rampage</label>
    <category>FrostBreathing_Ability_Catergory</category>
    <description>The user unleashes a devastating blizzard of freezing energy that encases all enemies in a wide radius around them in ice. The frigid power of the frost breathing technique freezes anything nearby solid. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/AbilityBlizzardStorm</iconPath>
    <cooldownTicksRange>900</cooldownTicksRange>
    <targetRequired>true</targetRequired>

    
    <requiredGeneDefName>Gene_FrostBreath</requiredGeneDefName>
    <resourceCost>25</resourceCost>
    <baseExperienceGain>30</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>12</range>
      <warmupTime>1.0</warmupTime>
      <noiseRadius>8</noiseRadius>
      <requireLineOfSight>false</requireLineOfSight>
      <targetParams>
        <canTargetSelf>false</canTargetSelf>
        <canTargetPawns>true</canTargetPawns>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>

    
    <comps>
      <li Class="EMF.CompProperties_AbilityDamageInRadius">
        <radius>4</radius>
        <damageParms>
          <damageAmount>8~12</damageAmount>
          <damageDef>AA_Freezing</damageDef>
        </damageParms>
        <friendlyFireParms>
          <canTargetHostile>true</canTargetHostile>
          <canTargetNeutral>true</canTargetNeutral>
          <canTargetFriendly>false</canTargetFriendly>
        </friendlyFireParms>
      </li>
    </comps>

    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic area attack that freezes nearby enemies with moderate chilling damage.</description>
      </li>

      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>250</experienceRequired>
        <description>An improved rampage with wider frost spread and increased freezing damage per target.</description>
        <resourceCostMultiplier>1.2</resourceCostMultiplier>
        <rangeMultiplier>1.1</rangeMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>5</radius>
            <damageParms>
              <damageAmount>12~16</damageAmount>
              <damageDef>AA_Freezing</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>500</experienceRequired>
        <description>A devastating rampage with extended radius and brutal freezing damage that can shatter armor with absolute zero temperatures.</description>
        <resourceCostMultiplier>1.4</resourceCostMultiplier>
        <rangeMultiplier>1.25</rangeMultiplier>
        <cooldownMultiplier>0.9</cooldownMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>6</radius>
            <damageParms>
              <damageAmount>16~20</damageAmount>
              <damageDef>AA_Freezing</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>800</experienceRequired>
        <description>The ultimate blizzard storm rampage - maximum area coverage with devastating freezing damage that can instantly freeze buildings and entomb any enemy in eternal ice.</description>
        <resourceCostMultiplier>1.6</resourceCostMultiplier>
        <rangeMultiplier>1.5</rangeMultiplier>
        <cooldownMultiplier>0.8</cooldownMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>7</radius>
            <damageParms>
              <damageAmount>20~28</damageAmount>
              <damageDef>AA_Freezing</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>
</Defs>
