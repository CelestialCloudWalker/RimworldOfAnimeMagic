<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Second_Form_Rising_Scorching_Sun</defName>
    <label>Second Form: Rising Scorching Sun</label>
    <category>FlameBreathing_Ability_Catergory</category>
    <description>The user delivers a diagonal slash with its sword, launching a scorching projectile attack. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/AbilityProjectile</iconPath>
    <cooldownTicksRange>60</cooldownTicksRange>
    <targetRequired>true</targetRequired>
    <displayOrder>200</displayOrder>
    <aiCanUse>true</aiCanUse>
    <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
    
    <requiredGeneDefName>Gene_FlameBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>10</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>20</range>
      <warmupTime>0.5</warmupTime>
      <soundCast>FireSpew_Resolve</soundCast>
      <targetParams>
        <canTargetPawns>true</canTargetPawns>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
    
    <comps>
      <li Class="CompProperties_AbilityLaunchProjectile">
        <projectileDef>Second_Form_Scorching_Sun_Projectile</projectileDef>
      </li>
    </comps>
    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic diagonal slash that launches a scorching projectile.</description>
      </li>
      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>100</experienceRequired>
        <description>An improved scorching slash with enhanced heat and burning duration.</description>
        <resourceCostMultiplier>1.1</resourceCostMultiplier>
        <rangeMultiplier>1.2</rangeMultiplier>
        <cooldownMultiplier>0.9</cooldownMultiplier>
        <levelComps>
          <li Class="CompProperties_AbilityLaunchProjectile">
            <projectileDef>Second_Form_Scorching_Sun_Projectile_Enhanced</projectileDef>
          </li>
        </levelComps>
      </li>
      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>250</experienceRequired>
        <description>A devastating flame slash with intense heat that spreads burning effects.</description>
        <resourceCostMultiplier>1.4</resourceCostMultiplier>
        <rangeMultiplier>1.3</rangeMultiplier>
        <cooldownMultiplier>0.85</cooldownMultiplier>
        <levelComps>
          <li Class="CompProperties_AbilityLaunchProjectile">
            <projectileDef>Second_Form_Scorching_Sun_Projectile_Intense</projectileDef>
          </li>
        </levelComps>
      </li>
      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>500</experienceRequired>
        <description>The ultimate scorching sun - an infernal slash with maximum heat and devastating burn effects.</description>
        <resourceCostMultiplier>1.6</resourceCostMultiplier>
        <rangeMultiplier>1.5</rangeMultiplier>
        <cooldownMultiplier>0.8</cooldownMultiplier>
        <levelComps>
          <li Class="CompProperties_AbilityLaunchProjectile">
            <projectileDef>Second_Form_Scorching_Sun_Projectile_Master</projectileDef>
          </li>
        </levelComps>
      </li>
