<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Flame_Breathing_Reflect</defName>
    <label>Flame Breathing: Reflect</label>
    <category>FlameBreathing_Ability_Catergory</category>
    <description>The user performs a powerful and swift circular slash wreathed in flames that can incinerate incoming projectiles. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/DeflectAbility</iconPath>
    <targetRequired>false</targetRequired>


    <requiredGeneDefName>Gene_FlameBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>8</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>-1</range>
    </verbProperties>


    <comps>
      <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
        <Radius>4</Radius>
        <TicksActive>1000</TicksActive>
        <MaxShotsToReflect>15</MaxShotsToReflect>
        <effecterDef>AnimeArsenal_Deflect</effecterDef>
        <hediffDef>AnimeArsenal_DeflectionField</hediffDef>
      </li>
    </comps>

    <levels>

      <li>
        <labelSuffix> (Flash)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic circular flame slash that incinerates incoming projectiles in a moderate area.</description>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>4</Radius>
            <TicksActive>1000</TicksActive>
            <MaxShotsToReflect>15</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_Deflect</effecterDef>
            <hediffDef>AnimeArsenal_DeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Gleam)</labelSuffix>
        <experienceRequired>120</experienceRequired>
        <description>An improved flame technique with larger radius and longer burning duration.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>5</Radius>
            <TicksActive>1250</TicksActive>
            <MaxShotsToReflect>20</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_Deflect</effecterDef>
            <hediffDef>AnimeArsenal_DeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Mirage)</labelSuffix>
        <experienceRequired>300</experienceRequired>
        <description>A superior flame wall with wide coverage and extended burning protection that consumes projectiles.</description>
        <resourceCostMultiplier>0.9</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>6.5</Radius>
            <TicksActive>1500</TicksActive>
            <MaxShotsToReflect>30</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_Deflect</effecterDef>
            <hediffDef>AnimeArsenal_DeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Erelong)</labelSuffix>
        <experienceRequired>600</experienceRequired>
        <description>The ultimate flame wall dance - massive burning radius, extended duration, and can incinerate enormous volleys of projectiles.</description>
        <resourceCostMultiplier>0.8</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>8.5</Radius>
            <TicksActive>2000</TicksActive>
            <MaxShotsToReflect>45</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_Deflect</effecterDef>
            <hediffDef>AnimeArsenal_DeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>


</Defs>
