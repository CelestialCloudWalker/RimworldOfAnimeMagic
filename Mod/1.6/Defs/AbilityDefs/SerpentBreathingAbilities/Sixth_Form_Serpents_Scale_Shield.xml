<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Sixth_Form_Serpents_Scale_Shield</defName>
    <label>Sixth Form: Serpent's Scale Shield</label>
    <category>SerpentBreathing_Ability_Catergory</category>
    <description>The user creates a protective barrier of serpentine scales that deflects incoming projectiles. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/DeflectAbility</iconPath>
    <targetRequired>false</targetRequired>

    
    <requiredGeneDefName>Gene_SerpentBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>8</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>-1</range>
    </verbProperties>

    
    <comps>
      <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
        <Radius>5</Radius>
        <TicksActive>1000</TicksActive>
        <MaxShotsToReflect>20</MaxShotsToReflect>
        <effecterDef>AnimeArsenal_SerpentDeflect</effecterDef>
        <hediffDef>AnimeArsenal_SerpentScaleShield</hediffDef>
      </li>
    </comps>

    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic serpentine barrier that deflects incoming projectiles with protective scales.</description>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>5</Radius>
            <TicksActive>1000</TicksActive>
            <MaxShotsToReflect>20</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_SerpentDeflect</effecterDef>
            <hediffDef>AnimeArsenal_SerpentScaleShield</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>120</experienceRequired>
        <description>Reinforced serpent scales provide wider protection and deflect more projectiles.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>6</Radius>
            <TicksActive>1250</TicksActive>
            <MaxShotsToReflect>25</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_SerpentDeflect</effecterDef>
            <hediffDef>AnimeArsenal_SerpentScaleShield</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>300</experienceRequired>
        <description>Hardened serpentine scales form an extensive protective barrier with enhanced duration and efficiency.</description>
        <resourceCostMultiplier>0.9</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>7.5</Radius>
            <TicksActive>1500</TicksActive>
            <MaxShotsToReflect>35</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_SerpentDeflect</effecterDef>
            <hediffDef>AnimeArsenal_SerpentScaleShield</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>600</experienceRequired>
        <description>The ultimate serpent's scale shield - an impenetrable fortress of serpentine protection that deflects massive volleys with incredible efficiency.</description>
        <resourceCostMultiplier>0.8</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>10</Radius>
            <TicksActive>2000</TicksActive>
            <MaxShotsToReflect>50</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_SerpentDeflect</effecterDef>
            <hediffDef>AnimeArsenal_SerpentScaleShield</hediffDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>

  <HediffDef>
    <defName>AnimeArsenal_SerpentScaleShield</defName>
    <label>serpent scale shield</label>
    <description>A protective barrier of serpentine scales that deflects incoming projectiles.</description>
    <hediffClass>AnimeArsenal.Hediff_DeflectionField</hediffClass>
    <defaultLabelColor>(0.6, 0.9, 0.6)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>1000</min>
          <max>1000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>
</Defs>
