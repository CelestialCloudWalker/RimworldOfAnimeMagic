<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AbilityDef>
    <defName>Twelfth_Fang_Boar_Rush</defName>
    <label>Twelfth Fang: Boar Rush</label>
    <description>The user vanishes in a blitz of dashes, automatically targeting nearby enemies with each jump.</description>
    <iconPath>UI/Icons/ComingSoon</iconPath>
    <cooldownTicksRange>600~600</cooldownTicksRange>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <drawAimPie>True</drawAimPie>
      <warmupTime>0.5</warmupTime>
      <range>15</range>
      <requireLineOfSight>True</requireLineOfSight>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetPawns>true</canTargetPawns>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="AnimeArsenal.CompProperties_ResourceCost">
        <resourceGeneDef>BeastBreath</resourceGeneDef>
        <resourceCost>20</resourceCost>
      </li>
      <li Class="AnimeArsenal.CompProperties_BaseStance">
        <maxJumps>6</maxJumps>
        <ticksBetweenJumps>3</ticksBetweenJumps>
        <jumpDistance>5</jumpDistance>
        <targetSearchRadius>18</targetSearchRadius>
        <jumpDamageDef>Cut</jumpDamageDef>
        <jumpDamage>4~5</jumpDamage>
        <!-- Custom effecter that plays when ability is first activated -->
        <casterEffecter>AnimeArsenal_BeastJump</casterEffecter>
        <!-- Custom effecter that plays on each hit/jump -->
        <impactEffecter>AnimeArsenal_BeastHit</impactEffecter>
      </li>
    </comps>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
  </AbilityDef>
</Defs>
