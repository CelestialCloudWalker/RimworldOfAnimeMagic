<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Insect_Breathing_Disperse</defName>
    <label>Insect Breathing: Disperse</label>
    <category>InsectBreathing_Ability_Catergory</category>
    <description>The user unleashes a devastating swarm of poisonous stingers that pierce through all enemies in a wide radius around them. The precise power of the insect breathing technique injects venom into anything nearby. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Icons/ComingSoon</iconPath>
    <cooldownTicksRange>900</cooldownTicksRange>
    <targetRequired>true</targetRequired>


    <requiredGeneDefName>Gene_InsectBreath</requiredGeneDefName>
    <resourceCost>25</resourceCost>
    <baseExperienceGain>30</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>12</range>
      <warmupTime>1.0</warmupTime>
      <noiseRadius>8</noiseRadius>
      <requireLineOfSight>false</requireLineOfSight>
      <targetParams>
        <canTargetSelf>false</canTargetSelf>
        <canTargetPawns>true</canTargetPawns>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>


    <comps>
      <li Class="EMF.CompProperties_AbilityDamageInRadius">
        <radius>4</radius>
        <damageParms>
          <damageAmount>8~12</damageAmount>
          <damageDef>Inscet_Breathing_Damage</damageDef>
        </damageParms>
        <friendlyFireParms>
          <canTargetHostile>true</canTargetHostile>
          <canTargetNeutral>true</canTargetNeutral>
          <canTargetFriendly>false</canTargetFriendly>
        </friendlyFireParms>
        <explosionEffecterDef>AnimeArsenal_InsectHit2</explosionEffecterDef>
      </li>
    </comps>

    <levels>

      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic swarm attack that surrounds enemies with venomous stingers dealing moderate poison damage.</description>
      </li>


      <li>
        <labelSuffix> (Gleam)</labelSuffix>
        <experienceRequired>250</experienceRequired>
        <description>An improved storm with wider swarm spread and increased stinging damage per target.</description>
        <resourceCostMultiplier>1.2</resourceCostMultiplier>
        <rangeMultiplier>1.1</rangeMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>5</radius>
            <damageParms>
              <damageAmount>12~16</damageAmount>
              <damageDef>Inscet_Breathing_Damage</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Mirage)</labelSuffix>
        <experienceRequired>500</experienceRequired>
        <description>A devastating storm with extended radius and brutal venomous stings that can pierce through armor with deadly precision.</description>
        <resourceCostMultiplier>1.4</resourceCostMultiplier>
        <rangeMultiplier>1.25</rangeMultiplier>
        <cooldownMultiplier>0.9</cooldownMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>6</radius>
            <damageParms>
              <damageAmount>16~20</damageAmount>
              <damageDef>Inscet_Breathing_Damage</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Erelong)</labelSuffix>
        <experienceRequired>800</experienceRequired>
        <description>The ultimate thousand stinger storm - maximum area coverage with devastating venomous damage that can inject lethal toxins through buildings and poison any enemy with the concentrated fury of a thousand insects.</description>
        <resourceCostMultiplier>1.6</resourceCostMultiplier>
        <rangeMultiplier>1.5</rangeMultiplier>
        <cooldownMultiplier>0.8</cooldownMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>7</radius>
            <damageParms>
              <damageAmount>20~28</damageAmount>
              <damageDef>Inscet_Breathing_Damage</damageDef>
            </damageParms>
            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>
</Defs>
