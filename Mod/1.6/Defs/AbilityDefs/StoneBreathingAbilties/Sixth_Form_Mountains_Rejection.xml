<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Sixth_Form_Mountains_Rejection</defName>
    <label>Sixth Form: Mountain's Rejection</label>
    <category>StoneBreathing_Ability_Catergory</category>
    <description>An instinctive counter that deflects incoming projectiles with the immovable strength of a mountain. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/DeflectAbility</iconPath>
    <targetRequired>false</targetRequired>

    
    <requiredGeneDefName>Gene_StoneBreath</requiredGeneDefName>
    <resourceCost>30</resourceCost>
    <baseExperienceGain>8</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>-1</range>
    </verbProperties>

    
    <comps>
      <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
        <Radius>5</Radius>
        <TicksActive>1250</TicksActive>
        <MaxShotsToReflect>20</MaxShotsToReflect>
        <effecterDef>AnimeArsenal_StoneDeflect</effecterDef>
        <hediffDef>AnimeArsenal_StoneRejectionField</hediffDef>
      </li>
    </comps>

    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic stone barrier that deflects incoming projectiles in a moderate area.</description>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>5</Radius>
            <TicksActive>1250</TicksActive>
            <MaxShotsToReflect>20</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_StoneDeflect</effecterDef>
            <hediffDef>AnimeArsenal_StoneRejectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>120</experienceRequired>
        <description>An improved stone barrier with larger radius and longer duration, like an unyielding cliff face.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>6</Radius>
            <TicksActive>1500</TicksActive>
            <MaxShotsToReflect>25</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_StoneDeflect</effecterDef>
            <hediffDef>AnimeArsenal_StoneRejectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>300</experienceRequired>
        <description>A superior stone barrier with wide coverage and extended protection, as immovable as a mountain peak.</description>
        <resourceCostMultiplier>0.9</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>7.5</Radius>
            <TicksActive>1750</TicksActive>
            <MaxShotsToReflect>35</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_StoneDeflect</effecterDef>
            <hediffDef>AnimeArsenal_StoneRejectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>600</experienceRequired>
        <description>The ultimate mountain's rejection - massive radius, extended duration, and the absolute defense of an eternal mountain range.</description>
        <resourceCostMultiplier>0.8</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>10</Radius>
            <TicksActive>2500</TicksActive>
            <MaxShotsToReflect>50</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_StoneDeflect</effecterDef>
            <hediffDef>AnimeArsenal_StoneRejectionField</hediffDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>

  <HediffDef>
    <defName>AnimeArsenal_StoneRejectionField</defName>
    <label>stone rejection field</label>
    <description>A barrier of hardened stone energy that deflects incoming projectiles with mountain-like resilience.</description>
    <hediffClass>AnimeArsenal.Hediff_DeflectionField</hediffClass>
    <defaultLabelColor>(0.7, 0.6, 0.5)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>1250</min>
          <max>1250</max>
        </disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>
</Defs>
