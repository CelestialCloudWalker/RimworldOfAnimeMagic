            <friendlyFireParms>
              <canTargetHostile>true</canTargetHostile>
              <canTargetNeutral>true</canTargetNeutral>
              <canTargetFriendly>false</canTargetFriendly>
            </friendlyFireParms>
          </li>
        </levelComps>
      </li>

      <li>
        <labelSuffix> (Erelong)</labelSuffix>
        <experienceRequired>800</experienceRequired>
        <description>Erelong-level Thunder Breathing technique. Creates a devastating dispersing wave that cuts through enemies with lightning-like speed and precision.</description>
        <resourceCostMultiplier>2.2</resourceCostMultiplier>
        <rangeMultiplier>1.5</rangeMultiplier>
        <cooldownMultiplier>0.8</cooldownMultiplier>
        <levelComps>
          <li Class="EMF.CompProperties_AbilityDamageInRadius">
            <radius>6</radius>
            <damageParms>
              <damageAmount>18~24</damageAmount>
