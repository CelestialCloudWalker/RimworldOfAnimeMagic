<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Thunder_Breathing_Disperse</defName>
    <label>Thunder Breathing: Disperse</label>
    <category>ThunderBreathing_Ability_Catergory</category>
    <description>A powerful Thunder Breathing technique that creates a dispersing wave of cutting energy, slicing through multiple enemies in a wide radius.</description>
    <iconPath>UI/Icons/ComingSoon</iconPath>
    <cooldownTicksRange>900</cooldownTicksRange>
    <targetRequired>true</targetRequired>

    <requiredGeneDefName>Gene_ThunderBreath</requiredGeneDefName>
