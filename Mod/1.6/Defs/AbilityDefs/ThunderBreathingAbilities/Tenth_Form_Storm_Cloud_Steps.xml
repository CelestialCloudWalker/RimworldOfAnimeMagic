<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Tenth_Form_Storm_Cloud_Steps</defName>
    <label>Tenth Form: Storm Cloud Steps</label>
    <category>ThunderBreathing_Ability_Catergory</category>
    <description>The user vanishes in a blitz of lightning-fast dashes, automatically targeting nearby enemies with each jump. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/AbilityMultiDash</iconPath>
    <cooldownTicksRange>600</cooldownTicksRange>
    <targetRequired>true</targetRequired>

    
    <requiredGeneDefName>Gene_ThunderBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>25</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>15</range>
      <drawAimPie>true</drawAimPie>
      <warmupTime>0.5</warmupTime>
      <noiseRadius>4</noiseRadius>
      <requireLineOfSight>true</requireLineOfSight>
      <targetParams>
        <canTargetSelf>false</canTargetSelf>
        <canTargetPawns>true</canTargetPawns>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>

    
    <comps>
      <li Class="AnimeArsenal.CompProperties_BaseStance">
        <maxJumps>4</maxJumps>
        <ticksBetweenJumps>4</ticksBetweenJumps>
        <jumpDistance>4</jumpDistance>
        <targetSearchRadius>15</targetSearchRadius>
        <jumpDamageDef>Cut</jumpDamageDef>
        <jumpDamage>3~4</jumpDamage>
        <casterEffecter>AnimeArsenal_ThunderJump</casterEffecter>
        <impactEffecter>AnimeArsenal_ThunderHit</impactEffecter>
      </li>
    </comps>

    <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>

    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic lightning-fast multi-dash attack that targets nearby enemies with moderate damage.</description>
      </li>

      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>200</experienceRequired>
        <description>An improved storm with more lightning jumps and increased damage per strike.</description>
        <resourceCostMultiplier>1.1</resourceCostMultiplier>
        <rangeMultiplier>1.1</rangeMultiplier>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_BaseStance">
            <maxJumps>5</maxJumps>
            <ticksBetweenJumps>3</ticksBetweenJumps>
            <jumpDistance>5</jumpDistance>
            <targetSearchRadius>16</targetSearchRadius>
            <jumpDamageDef>Cut</jumpDamageDef>
            <jumpDamage>4~5</jumpDamage>
            <casterEffecter>AnimeArsenal_ThunderJump</casterEffecter>
            <impactEffecter>AnimeArsenal_ThunderHit</impactEffecter>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>450</experienceRequired>
        <description>A devastating storm with extended range, more jumps, and lightning-fast execution between strikes.</description>
        <resourceCostMultiplier>1.25</resourceCostMultiplier>
        <rangeMultiplier>1.25</rangeMultiplier>
        <cooldownMultiplier>0.9</cooldownMultiplier>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_BaseStance">
            <maxJumps>6</maxJumps>
            <ticksBetweenJumps>2</ticksBetweenJumps>
            <jumpDistance>5</jumpDistance>
            <targetSearchRadius>18</targetSearchRadius>
            <jumpDamageDef>Cut</jumpDamageDef>
            <jumpDamage>5~6</jumpDamage>
            <casterEffecter>AnimeArsenal_ThunderJump</casterEffecter>
            <impactEffecter>AnimeArsenal_ThunderHit</impactEffecter>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>750</experienceRequired>
        <description>The ultimate storm cloud steps - maximum lightning jumps, devastating damage, and instantaneous execution across a wide area.</description>
        <resourceCostMultiplier>1.4</resourceCostMultiplier>
        <rangeMultiplier>1.5</rangeMultiplier>
        <cooldownMultiplier>0.8</cooldownMultiplier>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_BaseStance">
            <maxJumps>8</maxJumps>
            <ticksBetweenJumps>1</ticksBetweenJumps>
            <jumpDistance>6</jumpDistance>
            <targetSearchRadius>20</targetSearchRadius>
            <jumpDamageDef>Cut</jumpDamageDef>
            <jumpDamage>6~8</jumpDamage>
            <casterEffecter>AnimeArsenal_ThunderJump</casterEffecter>
            <impactEffecter>AnimeArsenal_ThunderHit</impactEffecter>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>
</Defs>
