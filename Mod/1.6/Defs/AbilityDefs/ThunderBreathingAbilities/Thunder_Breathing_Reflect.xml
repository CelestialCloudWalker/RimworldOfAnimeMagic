<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Thunder_Breathing_Reflect</defName>
    <label>Thunder Breathing: Reflect</label>
    <category>ThunderBreathing_Ability_Catergory</category>
    <description>An instinctive counter that creates a lightning field to deflect incoming projectiles. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/DeflectAbility</iconPath>
    <targetRequired>false</targetRequired>


    <requiredGeneDefName>Gene_ThunderBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>8</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>-1</range>
    </verbProperties>


    <comps>
      <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
        <Radius>4</Radius>
        <TicksActive>1000</TicksActive>
        <MaxShotsToReflect>15</MaxShotsToReflect>
        <effecterDef>AnimeArsenal_ThunderDeflect</effecterDef>
        <hediffDef>AnimeArsenal_ThunderShieldField</hediffDef>
      </li>
    </comps>

    <levels>

      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic lightning barrier that deflects incoming projectiles in a moderate area.</description>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>4</Radius>
            <TicksActive>1000</TicksActive>
            <MaxShotsToReflect>15</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_ThunderDeflect</effecterDef>
            <hediffDef>AnimeArsenal_ThunderShieldField</hediffDef>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Gleam)</labelSuffix>
        <experienceRequired>120</experienceRequired>
        <description>An improved lightning barrier with larger radius and more deflection capacity.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>5</Radius>
            <TicksActive>1200</TicksActive>
            <MaxShotsToReflect>20</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_ThunderDeflect</effecterDef>
            <hediffDef>AnimeArsenal_ThunderShieldField</hediffDef>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Mirage)</labelSuffix>
        <experienceRequired>300</experienceRequired>
        <description>A superior lightning barrier with wide coverage and instant reaction time.</description>
        <resourceCostMultiplier>0.9</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>6.5</Radius>
            <TicksActive>1500</TicksActive>
            <MaxShotsToReflect>30</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_ThunderDeflect</effecterDef>
            <hediffDef>AnimeArsenal_ThunderShieldField</hediffDef>
          </li>
        </levelComps>
      </li>


      <li>
        <labelSuffix> (Erelong)</labelSuffix>
        <experienceRequired>600</experienceRequired>
        <description>The ultimate thunder shield reversal - massive lightning field that can deflect entire volleys with lightning-fast reflexes.</description>
        <resourceCostMultiplier>0.8</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>8.5</Radius>
            <TicksActive>2000</TicksActive>
            <MaxShotsToReflect>45</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_ThunderDeflect</effecterDef>
            <hediffDef>AnimeArsenal_ThunderShieldField</hediffDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>

  <HediffDef>
    <defName>AnimeArsenal_ThunderShieldField</defName>
    <label>thunder shield field</label>
    <description>A crackling field of lightning energy that deflects incoming projectiles with electrical force.</description>
    <hediffClass>AnimeArsenal.Hediff_DeflectionField</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 1.0)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>1000</min>
          <max>1000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>
</Defs>
