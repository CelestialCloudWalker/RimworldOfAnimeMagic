<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Mist_Breathing_Slash</defName>
    <label>Mist Breathing: Slash</label>
    <category>MistBreathing_Ability_Catergory</category>
    <description>The user delivers a powerful slash through the mist, launching a disorienting projectile attack. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/AbilityProjectile</iconPath>
    <cooldownTicksRange>60</cooldownTicksRange>
    <targetRequired>true</targetRequired>
    <displayOrder>200</displayOrder>
    <aiCanUse>true</aiCanUse>
    <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>

    <requiredGeneDefName>Gene_MistBreath</requiredGeneDefName>
    <resourceCost>25</resourceCost>
    <baseExperienceGain>10</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>20</range>
      <warmupTime>0.6</warmupTime>
      <targetParams>
        <canTargetPawns>true</canTargetPawns>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>

    <comps>
      <li Class="CompProperties_AbilityLaunchProjectile">
        <projectileDef>Mist_Breath_Slice_Projectile</projectileDef>
      </li>
    </comps>
    <levels>

      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic mist-shrouded projectile attack that disorients enemies.</description>
      </li>

      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>100</experienceRequired>
        <description>An improved mist cutter with enhanced speed, damage, and disorientation effects.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <rangeMultiplier>1.2</rangeMultiplier>
        <cooldownMultiplier>0.9</cooldownMultiplier>
        <levelComps>
          <li Class="CompProperties_AbilityLaunchProjectile">
            <projectileDef>Mist_Breath_Slice_Projectile_Enhanced</projectileDef>
          </li>
        </levelComps>
      </li>

      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>250</experienceRequired>
        <description>A superior mist cutter with significantly increased damage and area of effect.</description>
        <resourceCostMultiplier>1.1</resourceCostMultiplier>
        <rangeMultiplier>1.3</rangeMultiplier>
        <cooldownMultiplier>0.85</cooldownMultiplier>
        <levelComps>
          <li Class="CompProperties_AbilityLaunchProjectile">
            <projectileDef>Mist_Breath_Slice_Projectile_Superior</projectileDef>
          </li>
        </levelComps>
      </li>

      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>500</experienceRequired>
        <description>The ultimate phantom mist cutter - devastating damage with maximum disorientation and piercing capability.</description>
        <resourceCostMultiplier>1.2</resourceCostMultiplier>
        <rangeMultiplier>1.5</rangeMultiplier>
        <cooldownMultiplier>0.8</cooldownMultiplier>
        <levelComps>
          <li Class="CompProperties_AbilityLaunchProjectile">
            <projectileDef>Mist_Breath_Slice_Projectile_Master</projectileDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>
</Defs>
