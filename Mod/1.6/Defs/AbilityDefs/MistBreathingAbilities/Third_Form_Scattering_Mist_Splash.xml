<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AnimeArsenal.TalentedLevelingAbilityDef>
    <defName>Third_Form_Scattering_Mist_Splash</defName>
    <label>Third Form: Scattering Mist Splash</label>
    <category>MistBreathing_Ability_Catergory</category>
    <description>The user performs a powerful and swift circular slash that creates scattering mist to deflect incoming projectiles. Gains experience with each use and becomes more powerful.</description>
    <iconPath>UI/Abilities/DeflectAbility</iconPath>
    <targetRequired>false</targetRequired>

    
    <requiredGeneDefName>Gene_MistBreath</requiredGeneDefName>
    <resourceCost>20</resourceCost>
    <baseExperienceGain>8</baseExperienceGain>
    <showExperienceInTooltip>true</showExperienceInTooltip>

    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>-1</range>
    </verbProperties>

    
    <comps>
      <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
        <Radius>5</Radius>
        <TicksActive>1250</TicksActive>
        <MaxShotsToReflect>20</MaxShotsToReflect>
        <effecterDef>AnimeArsenal_MistDeflect</effecterDef>
        <hediffDef>AnimeArsenal_MistDeflectionField</hediffDef>
      </li>
    </comps>

    <levels>
      
      <li>
        <labelSuffix> (Novice)</labelSuffix>
        <experienceRequired>0</experienceRequired>
        <description>A basic circular slash that creates scattering mist to deflect incoming projectiles in a moderate area.</description>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>5</Radius>
            <TicksActive>1250</TicksActive>
            <MaxShotsToReflect>20</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_MistDeflect</effecterDef>
            <hediffDef>AnimeArsenal_MistDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Adept)</labelSuffix>
        <experienceRequired>120</experienceRequired>
        <description>An improved mist technique with denser fog, larger radius and longer duration.</description>
        <resourceCostMultiplier>1.0</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>6</Radius>
            <TicksActive>1500</TicksActive>
            <MaxShotsToReflect>25</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_MistDeflect</effecterDef>
            <hediffDef>AnimeArsenal_MistDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Expert)</labelSuffix>
        <experienceRequired>300</experienceRequired>
        <description>A superior mist technique with wide coverage and extended protection through thick, swirling fog.</description>
        <resourceCostMultiplier>0.9</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>7.5</Radius>
            <TicksActive>1750</TicksActive>
            <MaxShotsToReflect>35</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_MistDeflect</effecterDef>
            <hediffDef>AnimeArsenal_MistDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>

      
      <li>
        <labelSuffix> (Master)</labelSuffix>
        <experienceRequired>600</experienceRequired>
        <description>The ultimate scattering mist splash - creates a massive mist barrier with enormous radius, extended duration, and can deflect massive volleys of projectiles.</description>
        <resourceCostMultiplier>0.8</resourceCostMultiplier>
        <cumulativeEffects>false</cumulativeEffects>
        <levelComps>
          <li Class="AnimeArsenal.CompProperties_DeflectProjectiles">
            <Radius>10</Radius>
            <TicksActive>2500</TicksActive>
            <MaxShotsToReflect>50</MaxShotsToReflect>
            <effecterDef>AnimeArsenal_MistDeflect</effecterDef>
            <hediffDef>AnimeArsenal_MistDeflectionField</hediffDef>
          </li>
        </levelComps>
      </li>
    </levels>
  </AnimeArsenal.TalentedLevelingAbilityDef>

  <HediffDef>
    <defName>AnimeArsenal_MistDeflectionField</defName>
    <label>mist deflection field</label>
    <description>A swirling field of mist that deflects incoming projectiles and obscures vision.</description>
    <hediffClass>AnimeArsenal.Hediff_DeflectionField</hediffClass>
    <defaultLabelColor>(191, 191, 218)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>1250</min>
          <max>1250</max>
        </disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>
</Defs>
