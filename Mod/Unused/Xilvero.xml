<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<FactionDef ParentName="FactionBase">
		<defName>WN_NarutoFactionKiri</defName>
		<label>Kirigakure</label>
		<categoryTag>NarutoFactionKiri</categoryTag>
		<description>Hidden Villages are parts of countries in which the country's ninja reside. Their heads stand equally with the landlords ruling the countries they are a part of.
		A Hidden Village maintains its economy by training its citizens to be ninja from a young age and using them as manpower in various missions others would be willing to pay for.</description>
		<pawnSingular>ninja</pawnSingular>
		<pawnsPlural>shinobi</pawnsPlural>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxCountAtGameStart>1</maxCountAtGameStart>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>Kage</leaderTitle>
		<royalFavorLabel>honor</royalFavorLabel>
		<royalFavorIconPath>UI/Icons/RoyalFavor</royalFavorIconPath>
		<leaderForceGenerateNewPawn>true</leaderForceGenerateNewPawn>
		<factionIconPath>UI/Icons/NarutoFactionIconKiri</factionIconPath>
		<factionNameMaker>WN_NamerFactionNarutoKiri</factionNameMaker>
		<settlementNameMaker>WN_NamerSettlementNarutoKiri</settlementNameMaker>
		<allowedCultures><li>Rustican</li></allowedCultures>
		<requiredMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">WN_Ninja</li>
		</requiredMemes>
		<xenotypeSet>
			<xenotypeChances>
				<WN_Uchiha>0.025</WN_Uchiha>
				<WN_Sabaku>0.01</WN_Sabaku>
				<WN_Hyuuga>0.01</WN_Hyuuga>
				<WN_Yuki>0.025</WN_Yuki>
				<WN_Aburame>0.01</WN_Aburame>
				<WN_Sarutobi>0.01</WN_Sarutobi>
			</xenotypeChances>
		</xenotypeSet>
		<techLevel>Medieval</techLevel>
		<backstoryFilters>
			<li>
				<categories>
					<li>Outlander</li>
				</categories>
			</li>
		</backstoryFilters>
		<allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<fixedLeaderKinds>
			<li>WN_KageKiri</li>
		</fixedLeaderKinds>
		<royalTitleTags>
			<li>NarutoTitle</li>
		</royalTitleTags>
		<caravanTraderKinds>
			<li>WN_Caravan_Naruto_BulkGoods</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>WN_Visitor_Naruto_Standard</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>WN_Base_Naruto_Standard</li>
		</baseTraderKinds>
		<royalTitleInheritanceWorkerClass>RoyalTitleInheritanceWorker</royalTitleInheritanceWorkerClass>
		<royalTitleInheritanceRelations>
			<li>Child</li>
			<li>Grandchild</li>
			<li>GreatGrandchild</li>
			<li>NephewOrNiece</li>
			<li>Spouse</li>
			<li>Sibling</li>
			<li>HalfSibling</li>
			<li>Cousin</li>
			<li>Parent</li>
			<li>UncleOrAunt</li>
		</royalTitleInheritanceRelations>
		<raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,100000)</li>
				<li>(100000, 100000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<WN_VillageCitizenKiri>1</WN_VillageCitizenKiri>
				</traders>
				<carriers>
					<Muffalo>6</Muffalo>
					<Dromedary>5</Dromedary>
					<Alpaca>2</Alpaca>
					<Elephant>1</Elephant>
				</carriers>
				<guards>
					<WN_GeninKiri>5</WN_GeninKiri>
					<WN_ChuninKiri>5</WN_ChuninKiri>
				</guards>
				<options>
					<WN_VillageCitizenKiri>20</WN_VillageCitizenKiri>
					<WN_GeninKiri>3</WN_GeninKiri>
					<WN_ChuninKiri>10</WN_ChuninKiri>
					<WN_JouninKiri>3</WN_JouninKiri>
				</options>
			</li>
			<li>
				<kindDef>Peaceful</kindDef>
				<options>
					<WN_VillageCitizenKiri>20</WN_VillageCitizenKiri>
					<WN_GeninKiri>3</WN_GeninKiri>
					<WN_ChuninKiri>10</WN_ChuninKiri>
					<WN_JouninKiri>3</WN_JouninKiri>
				</options>
			</li>
			<li>
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
