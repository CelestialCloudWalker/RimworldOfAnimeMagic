				<options>
					<WN_GeninKiri>0.45</WN_GeninKiri>
					<WN_ChuninKiri>0.65</WN_ChuninKiri>
					<WN_JouninKiri>0.15</WN_JouninKiri>
				</options>
			</li>
			<li Class="NarutoMod.PawnGroupMaker_LargeRaid">
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
					<WN_GeninKiri>0.15</WN_GeninKiri>
					<WN_ChuninKiri>0.60</WN_ChuninKiri>
					<WN_JouninKiri>0.30</WN_JouninKiri>
					<WN_EliteJouninKiri>0.10</WN_EliteJouninKiri>
				</options>
			</li>
			<li>
				<!-- Base defense, mainly ranged with melee mix-ins -->
