<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationInsert">
    <xpath>/Defs/ThinkTreeDef[defName="Humanlike"]/thinkRoot/subNodes/li[treeDef="Downed"]</xpath>
    <value>
        <li Class="AnimeArsenal.ThinkNode_ConditionalIsDemon">
          <subNodes>

            <li Class="AnimeArsenal.ThinkNode_ConditionalIsDaylight">
              <subNodes>
                <li Class="ThinkNode_Priority">
                  <subNodes>

                    <li Class="AnimeArsenal.ThinkNode_ConditionalIsColonist">
                      <subNodes>

                        <li Class="ThinkNode_ConditionalDrafted">
                          <invert>true</invert>
                          <subNodes>

                            <li Class="AnimeArsenal.ThinkNode_ConditionalIsUnderRoof">
                              <invert>true</invert>
                              <subNodes>
                                <li Class="AnimeArsenal.JobGiver_GoToRoof" />
