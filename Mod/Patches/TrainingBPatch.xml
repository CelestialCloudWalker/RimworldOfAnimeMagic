<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!--
    This adds the TrainingComp to all humanlike pawns.
    This is required for the training system to work!
  -->

  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[@Name="Human"]/comps</xpath>
        <value>
          <li>
            <compClass>AnimeArsenal.TrainingComp</compClass>
          </li>
        </value>
      </li>
    </operations>
  </Operation>

</Patch>
